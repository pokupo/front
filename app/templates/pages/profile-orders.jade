extends ../partials/layouts/profile

block head
	- page.title = 'Личный кабинет: Заказы';

block menu 
	+menu-list([
		{text:"Платформа",href:"frontpage.html",submenu:[
			{text:"О проекте",href:"about.html"},
			{text:"Торговый портал",href:"http://shop.pokupo.ru/", external:true}
		]},
		{text:"Тарифы",href:"rates.html"},
		{text:"Компания",href:"#", submenu:[
			{text:"События",href:"events.html"},
			{text:"О нас",href:"aboutus.html"},
			{text:"Сообщество",href:"community.html"},
			{text:"Блог",href:"http://pokupo.livejournal.com/", external:true}
		]},
		{text:"Партнёры",href:"partners.html"},
		
		{text:"Помощь", href:js0, submenu:[
			{text:"Вопросы и ответы",href:"faq.html"},	
			{text:"Техническая поддержка",href:"https://help.pokupo.ru", external:true}
		]}
	])(class="b-navigation")

block profile-nav
	section.profile-nav.grey
		.container
			ul.menu.b-profile-nav
				li.menu__item
					a.icon__profile(href="profile.html")
						span Профиль
				li.menu__item
					a.icon__favorites(href="profile-favorites.html")
						span Избранное
				li.menu__item
					a.icon__cart(href="profile-cart.html")
						span Корзина
				li.menu__item.active
					a.icon__order(href="profile-orders.html")
						span Заказы
				li.menu__item
					a.icon__mail(href="profile-mail.html")
						span Сообщения
						sup.menu__item__num 25
			a.btn.btn-sm(href=js0)
				i.icon.icon-store--small
				| Стать продавцом

block content
	section.profile.profile-orders
		.container
			.columns.triple
				.first.double.column
					.content
						h1.b-profile__header История заказов

				.third.column
					.content
						button.btn.btn-lg.btn-inline.b-mail__addbtn.b-mail__addbtn--top(type="button")
							i.icon.icon-reload
							| Обновить данные

			table.b-order-table
				thead
					tr
						th.b-order-table__name Заказ
						th Магазин
						th.b-order-table__price Стоимость
						th Статус
						th Оплата
						th.b-order-table__actions
				tbody
					tr.b-order-table__item
						td.b-order-table__name 
							a(href="profile-order.html") Заказ №65752 от&nbsp;26&nbsp;августа 2014
						td Торговая платформа Покупо
						td.b-order-table__price
							+price(5600)
						td.b-order-table__status
							.b-status.b-status--new Новый
						td.b-order-table__status 
							.b-status.b-status--waiting Ожидает оплаты
						td.b-order-table__actions
							.b-order-item__edit.btn-circle.btn-circle--edit(rel="tooltip" title="Изменить")
							.b-order-item__edit.btn-circle.btn-circle--cancel(rel="tooltip" title="Отменить")
							.b-order-item__drop.btn-circle.btn-circle--drop(rel="tooltip" title="Удалить")

					tr.b-order-table__item
						td.b-order-table__name 
							a(href="profile-order.html") Заказ №65752 от&nbsp;4&nbsp;мая 2014
						td Торговая платформа Покупо
						td.b-order-table__price
							+price(8900)
						td.b-order-table__status
							.b-status.b-status--cancelled Отменён
						td.b-order-table__status 
							.b-status.b-status--cancelled Отменён
						td.b-order-table__actions
							.b-order-item__edit.btn-circle.btn-circle--cart(rel="tooltip" title="Скопировать в корзину")
							.b-order-item__edit.btn-circle.btn-circle--retry(rel="tooltip" title="Повторить")
							.b-order-item__drop.btn-circle.btn-circle--drop(rel="tooltip" title="Удалить")

					tr.b-order-table__item
						td.b-order-table__name 
							a(href="profile-order.html") Заказ №18048 от&nbsp;11&nbsp;апреля 2014
						td Торговая платформа Покупо
						td.b-order-table__price
							+price(4240)
						td.b-order-table__status
							.b-status.b-status--done Выполнен
						td.b-order-table__status 
							.b-status.b-status--done Оплачен
						td.b-order-table__actions

					tr.b-order-table__item
						td.b-order-table__name 
							a(href="profile-order.html") Заказ №9523 от&nbsp;20&nbsp;февраля 2014
						td Торговая платформа Покупо
						td.b-order-table__price
							+price(12480)
						td.b-order-table__status
							.b-status.b-status--forming Формируется
						td.b-order-table__status 
							.b-status.b-status--checking На проверке
						td.b-order-table__actions
							.b-order-item__edit.btn-circle.btn-circle--edit(rel="tooltip" title="Изменить")
							.b-order-item__edit.btn-circle.btn-circle--cancel(rel="tooltip" title="Отменить")
							.b-order-item__drop.btn-circle.btn-circle--drop(rel="tooltip" title="Удалить")

					tr.b-order-table__item
						td.b-order-table__name 
							a(href="profile-order.html") Заказ №17894 от&nbsp;22&nbsp;декабря 2013
						td Торговая платформа Покупо
						td.b-order-table__price
							+price(1890)
						td.b-order-table__status
							.b-status.b-status--return Возвращён
						td.b-order-table__status 
							.b-status.b-status--warning Платёж не прошёл
						td.b-order-table__actions
							.b-order-item__edit.btn-circle.btn-circle--edit(rel="tooltip" title="Изменить")
							.b-order-item__edit.btn-circle.btn-circle--cancel(rel="tooltip" title="Отменить")
							.b-order-item__drop.btn-circle.btn-circle--drop(rel="tooltip" title="Удалить")
				tfoot
					tr
						td(colspan=6) 
							button.btn.btn-lg.btn-inline(type="button" style="margin: 40px 0 0") 
								i.icon.icon-reload
								| Обновить данные
























