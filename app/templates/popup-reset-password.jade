extends partials/layouts/inner

block reset
	.popup.signin
		header.patterned.black
			h1.with-icon Сброс пароля
			span.close-popup.btn-circle.btn-circle--drop.btn-circle--white
		.content
			.result
				h3 Готово!
				p Дальнейшая инструкция отправлена<br/>на ваш почтовый адрес.
				

block content
	.fade.in
		.popup.signin
			header.patterned.black
				h1.with-icon Сброс пароля
				span.close-popup.btn-circle.btn-circle--drop.btn-circle--white
			.content
				form(method="get" action="index.html")
					.input-holder
						input.inline-input(name="email" type="email" required="required" placeholder="Электронная почта")

					button.btn.btn-lg(type="submit") Сбросить
