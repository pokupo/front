section.orange.search
	.container
		.b-search
			.b-search-holder
				input.b-search__input(type="search" placeholder="Поиск по каталогу...")

			.b-location.dropdown.selector
				a.b-location__current.dropdown__trigger.selector__current(href=js0 data-target="location") Все категории

				.dropdown__content.hidden(data-target="location")
					.b-location__catalog.selector__options
						+search-list([
							{text:"Все разделы",href:"#", active: true},
							{text:"Компьютерная техника",href:"#"},
							{text:"Бытовая техника",href:"#"},
							{text:"Телефоны и связь",href:"#"},
							{text:"Фото и оптика",href:"#"},
							{text:"Одежда, обувь, акксессуары",href:"#", submenu:[
								{text:"Кроссовки",href:"#"},
								{text:"Кеды",href:"#"},
								{text:"Босоножки",href:"#"},
								{text:"Туфли",href:"#"},
								{text:"Ботильоны",href:"#"},
								{text:"Сандалии",href:"#"},
								{text:"Балетки",href:"#"},
								{text:"Сапоги",href:"#"},
								{text:"Резиновая обувь",href:"#"}
								]},
							{text:"Подарки и праздники",href:"#"},
							{text:"Книги, учебники и журналы",href:"#"},
							{text:"Мебель, интерьеры и обиход",href:"#"},
							{text:"Другое",href:"#"}])
		
			button.b-search__button(type="button") Найти

section.advanced-search.slidedown
	.container
		.advanced-search-trigger
			span.advanced-search-trigger__text.slidedown__trigger(data-target="search") Расширенный поиск
		.b-advanced-search.slidedown__content.hidden(data-target="search")
			.columns.triple
				.first.column
					.content
						.b-location.dropdown
							a.b-location__current.dropdown__trigger(href=js0 data-target="location")
								span#js-multilocation.fancytree-checkbox.part
								| Все категории

							.dropdown__content.hidden(data-target="location")
								.b-location__catalog
									#multilocation(style="text-align:left")
						.input-holder
							select(name="select")
								option(value="0" selected) Все продавцы
								option(value="1") Частное лицо
								option(value="2") Компания
				.second.column
					.content
						.input-holder
							input.no-label.inline-input(name="login" type="text" placeholder="Ключевые слова")
						.input-holder
							input.no-label.inline-input(name="login" type="text" placeholder="Исключить слова")
				.third.column
					.content
						.input-holder
							select(name="select")
								option(value="0" selected) Любое из слов
								option(value="1") Все слова
						.input-holder.hidden
							label(for="currency") Валюта
							.radio-circles
								ul.menu
									li.menu__item.active
										a(href=js0)
											i.icon.icon__currency--rub
									li.menu__item
										a(href=js0)
											i.icon.icon__currency--dol
									li.menu__item
										a(href=js0)
											i.icon.icon__currency--btc
						.input-holder
							label(for="minPrice") Цена
							input#minPrice.no-label.inline-input.inline-input--small(name="minPrice" type="text" placeholder="от")
							label(for="maxPrice").separator —
							input#maxPrice.no-label.inline-input.inline-input--small(name="maxPrice" type="text" placeholder="до")
						
			span.btn.btn-block.b-advanced-search__submit
				| Начать расширенный поиск 
				i.icon.icon-search







