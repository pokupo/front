include ../../../templates/helpers/knockout

script#relatedGoodsSliderTmpl(type="text/html")
    // version 1.0 
    .b-catalog-item__aux
        +if('countGoods > 0 ')
            .block_title Вместе с этим товаром покупают
            #related_goods_slider.b-catalog-banner.promoBlocks(data-bind='css: cssBlockContainer')
                +each('content ')
                    .b-catalog-banner__slide(data-bind='css: cssBlock, attr: {style: backgroundImage}')
                        .container
                            hgroup
                                h1(data-bind='text: parent.titleBlock')
                                h2.lead(data-bind='title: chortName')


script#relatedGoodsCarouselTmpl(type="text/html")
    // version 1.0 
    .b-catalog-item__aux
        +if('countGoods > 0')
            h3 Вместе с этим товаром покупают
            #related_goods_carousel.b-catalog__items.cards.cards--small
                +each('content')
                    .b-catalog__item
                        .b-item
                            .b-item__picture
                                a(href='#', data-bind='click: ClickGoods')
                                    img(src='', data-bind='attr: {src: routeImage, title: chortName, id : cssToCart}')
                            .responsive-holder
                                .b-item__description
                                    h4.b-item__title
                                        a(href='#', data-bind='text: chortName, click: ClickGoods, attr: {id : cssTitleToCart}')
                                    .b-item__info
                                        p(data-bind='html: description')
                                .b-item__price
                                    +if('discount() > 0')
                                        .b-price.b-item__price--old
                                            span.b-price__number(data-bind='text: sellGoods')
                                            span.b-price__thinsp &nbsp;
                                            span.b-price__rubl Р
                                        .b-price
                                            span.b-price__number(data-bind='text: sellCost')
                                            span.b-price__thinsp &nbsp;
                                            span.b-price__rubl Р
                                   
                                    +if('discount() == 0')
                                        .b-price
                                            span.b-price__number(data-bind='text: sellCost')
                                            span.b-price__thinsp &nbsp;
                                            span.b-price__rubl Р
                                    
                            .b-item__order-button
                                button.btn(type='button', data-bind='click: ClickBuy')
                                    i.icon.icon-cart
                                    | В корзину
                            .b-item__badges
                                span.bestseller Хит!


