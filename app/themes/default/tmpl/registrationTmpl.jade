include ../../../templates/helpers/knockout

script#registrationFromStep1Tmpl(type="text/html")
    // version 1.0 
    .h1-with-progress-bar
        canvas#progressCircle(width='160', height='160')
            p Ваш браузер не поддерживает технологию canvas
        h1 Регистрация нового аккаунта
    form(action='')
        #registerWizard.b-wizard
            ul.b-wizard__steps.anchor
                li
                    a.selected(href='#step-1', isdone='1', rel='1')
                        label.b-wizard__step-num 1
                li
                    a.disabled(href='#step-2', isdone='0', rel='2')
                        label.b-wizard__step-num 2
                li
                    a.disabled(href='#step-3', isdone='0', rel='3')
                        label.b-wizard__step-num 3
                li
                    a.disabled(href='#step-4', isdone='0', rel='4')
                        label.b-wizard__step-num 4
            .b-wizard__holder
                #step-1.content
                    h2.b-wizard__step-title Данные аккаунта
                    p Укажите свой уникальный псевдоним, почту и телефон
                    .input-holder.tooltip
                        .tooltip__trigger
                            | ?
                            .tooltip__content
                                p Введите ваше имя на сайте.
                                .tooltip__before
                                .tooltip__after
                        .floatlabel-wrapper(style='position: relative;')
                            input#i-77.block-input(type='text', name='nickname', value='', placeholder='Псевдоним', data-bind='value: username')
                            label.label-floatlabel(for='i-77', style='display: none;') Псевдоним
                        +if('errorUsername')
                            .form_error(data-bind='text: errorUsername')
                        
                    .input-holder.tooltip
                        .tooltip__trigger
                            | ?
                            .tooltip__content
                                p
                                    | Введите ваш адрес электронной почты. Он будет логином для входа в личный кабинет.
                                p На этот адрес будут приходить уведомления о статусе вашего заказа.
                                .tooltip__before
                                .tooltip__after
                        .floatlabel-wrapper(style='position: relative;')
                            input#i-93.block-input(type='email', name='email', value='', placeholder='Ваш e-mail', data-bind='value: email')
                            label.label-floatlabel(for='93', style='display: none;') Ваш e-mail
                        +if('errorEmail')
                            .form_error(data-bind='html: errorEmail')
                        
                    .input-holder.tooltip
                        .tooltip__trigger
                            | ?
                            .tooltip__content
                                p Укажите номер вашего телефона.
                                .tooltip__before
                                .tooltip__after
                        .floatlabel-wrapper(style='position: relative;')
                            input#i-5.block-input(type='tel', name='phone', value='', placeholder='Номер телефона', data-bind='value: phone, attr: {id : cssPhone}')
                            label.label-floatlabel(for='5', style='display: none;') Номер телефона
                        +if('errorPhone')
                            .form_error(data-bind='html: errorPhone')
                        
                    .input-holder.tooltip
                        .tooltip__trigger
                            | ?
                            .tooltip__content
                                p
                                    | Ваш пароль должен содержать минимум одну цифру, заглавную букву, спецсимвол, иероглиф, коловрат, число зверя и кровь девственницы.
                                .tooltip__before
                                .tooltip__after
                        .floatlabel-wrapper(style='position: relative;')
                            input#i-48.block-input(type='password', name='password', value='', placeholder='Пароль', data-bind='value: firstPassword, attr : {id: cssFirstPassword}')
                            label.label-floatlabel(for='48', style='display: none;') Пароль
                        +if('errorFirstPassword')
                            .form_error(data-bind='text: errorFirstPassword')
                        
                    .input-holder
                        .floatlabel-wrapper(style='position: relative;')
                            input#i-73.block-input(type='password', name='password-double', value='', placeholder='Повторить пароль', data-bind='value: secondPassword, attr : {id: cssSecondPassword}')
                            label.label-floatlabel(for='73', style='display: none;') Повторить пароль
                        +if('errorSecondPassword')
                            .form_error(data-bind='text: errorSecondPassword')
                        
                    .input-holder(style='padding-top: 13px;')
                        input#iagree.checkbox(name='iagree', type='checkbox', data-bind='checked: isChecked')
                        label.block-label.b-small-text(for='iagree')
                            | Я принимаю условия
                            a(href=js0, target='_blank', data-bind='attr:{href: agreement}') пользовательского соглашения
                            | ,
                            br
                            a(href=js0, target='_blank', data-bind='attr:{href: police}') правил конфиденциальности
                            | и
                            a(href=js0, target='_blank', data-bind='attr:{href: refund}') политики возврата платежей
                        +if('errorIsChecked')
                            .form_error(data-bind='text: errorIsChecked')
                        
            .b-wizard__actions
                .b-wizard__loader Loading
                a.b-wizard__action.btn-next-step(href=js0, data-bind='click: SubmitForm') Продолжить


script#registrationFromStep2Tmpl(type="text/html")
    // version 1.0 
    .h1-with-progress-bar
        canvas#progressCircle(width='160', height='160')
            p Ваш браузер не поддерживает технологию canvas
        h1 Регистрация нового аккаунта
    form(action='')
        #registerWizard.b-wizard
            ul.b-wizard__steps.anchor
                li
                    a.done(href='#step-1', isdone='1', rel='1')
                        label.b-wizard__step-num 1
                li
                    a.selected(href='#step-2', isdone='0', rel='2')
                        label.b-wizard__step-num 2
                li
                    a.disabled(href='#step-3', isdone='0', rel='3')
                        label.b-wizard__step-num 3
                li
                    a.disabled(href='#step-4', isdone='0', rel='4')
                        label.b-wizard__step-num 4

            .b-wizard__holder
                #step-2.content
                    h2.b-wizard__step-title Активация аккаунта
                    p Укажите код, высланный на почтовый адрес или телефон
                    +if('errorConfirmLater')
                        .error_form(data-bind='text: errorConfirmLater')
                    
                    +ifnot('mailConfirmLater')
                        .input-holder.tooltip
                            .tooltip__trigger
                                | ?
                                .tooltip__content
                                    p Код, высланный на почтовый адрес или телефон
                                    .tooltip__before
                                    .tooltip__after
                            .floatlabel-wrapper(style='position: relative;')
                                input#i-37.block-input(type='text', name='code', value='', placeholder='Ваш e-mail код', data-bind='value: mailToken')
                                label.label-floatlabel(for='37', style='display: none;') Ваш e-mail код
                            +if('mailIsConfirm ')
                                .b-status.b-status--done E-mail подтверждён

                            +if('errorEmailConfirm')
                                .form_error(data-bind='text: errorEmailConfirm')
                            
                    .input-holder(style='padding-top: 13px;')
                        input#skip-email.checkbox(name='skip-email', type='checkbox', checked='', data-bind='checked: mailConfirmLater')
                        label.block-label.b-small-text(for='skip-email') Подтвердить почтовый ящик позднее
                    +ifnot('isEmptyPhone ')
                        +ifnot('phoneConfirmLater')
                            .input-holder.tooltip
                                .tooltip__trigger
                                    | ?
                                    .tooltip__content
                                        p Код, высланный в SMS
                                        .tooltip__before
                                        .tooltip__after
                                .floatlabel-wrapper(style='position: relative;')
                                    input#i-37.block-input(type='text', name='code', value='', placeholder='Ваш e-mail код', data-bind='value: phoneToken')
                                    label.label-floatlabel(for='37', style='display: none;') Ваш SMS код
                                +if('phoneIsConfirm ')
                                    .b-status.b-status--done Телефон подтверждён
                                +if('errorPhoneConfirm')
                                    .form_error(data-bind='text: errorPhoneConfirm')
                            
                    .input-holder(style='padding-top: 13px;')
                        input#skip-phone.checkbox(name='skip-email', type='checkbox', checked='', data-bind='checked: phoneConfirmLater')
                        label.block-label.b-small-text(for='skip-phone') Подтвердить телефон позднее
            .b-wizard__actions
                .b-wizard__loader Loading
                a.b-wizard__action.btn-prev-step(href=js0, data-bind='click: Back') Назад
                a.b-wizard__action.btn-next-step(href=js0, data-bind='click: SubmitForm') Продолжить


