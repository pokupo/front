/* Хэлперы и переменные */
@import '../../../styles/helpers/*'

.b-order-list
	&__results
		margin-top 49px
		text-align right

	&__amount
	&__tobepaid
		font-weight 300
		font-size 18px

		.b-price
			width 203px
			padding-left 40px
			display inline-block
			text-align right
			line-height 20px
			font-weight 800
			color $green

	&__tobepaid
		font-size 30px
		.b-price
			font-size 30px

section.profile 
	.b-order-list__amount
	.b-order-list__tobepaid
		.b-price
			text-align left
		.b-order-item__discount
			position relative
			left -3px			
	
.b-order-list__buttons
	text-align right

	.btn
		margin-left 10px
		padding-left 35px
		padding-right 35px


/* ---------------------------------------- *
 * #cabinetCartGoodsGoodsBlockTmpl          *
 * ======================================== */

.b-order-item
	font-size 0
	line-height 30px
	border-bottom 1px solid $grey
	cursor default
	user-select none
	white-space nowrap
	clearfix()

	&:hover
		background rgba($white, 0.4)
	
	& > div
		font-size 16px
		line-height 100px
		display inline-block
		vertical-align middle

	&__checkbox
		width 35px
		padding-left 2px

	&__img
		width 81px
		padding 0 8px
		img
			width 100%
			height auto
			vertical-align middle
		& + .b-order-item__name
			padding-left 0
		
	&__name
		width 280px
		padding 0 25px 0 30px
		line-height 20px!important
		white-space normal!important

		span 
			line-height 20px
			color $a__link
			font-weight normal

	&__price
		min-width 80px
		color #999
		line-height 25px!important

		.b-item__price--old
			font-size 12px

	&__qty
		width 195px
		padding 0 0 0 20px
		text-align center

	&__cost
		padding 0 20px 0 30px
		width 120px
		font-size 18px!important
		font-weight 800
		line-height 25px!important
		color $green

		.b-order-item__discount
			display block
			font-weight 800
			font-size 12px
			color #333

	&__delay
		width 140px
		padding 0 5px
		text-align center

	&__drop
		margin-left 10px
		opacity 1
		transition border-color, opacity 0.2s ease-in-out

		&:before
			sprite($icon__drop)
		&:hover
			border-color $red1
		&:active
			border-color #882626
			&:before
				sprite($icon__drop__active)

	&__action
		float right
		min-width 150px
		text-align center
		margin-left 20px

		.cart_button
		.btn
			margin 0 0 0 10px
			border-width 4px
			padding 13px 22px 12px

		.cart_button
			line-height 20px


	.b-catalog-item__limits
		text-align center

	/* Выпадайка меню */
	&.b-cart-menu__goods-item
		line-height 30px
		min-height 63px
		padding 4px 0

		& > div
			line-height 60px

		.b-order-item__name
			width 250px

		.b-order-item__qty
			width 80px
			padding 0 5px

.b-thead
	height 50px
	line-height 50px

	&:hover
		background #fff

	& > div
		line-height 50px
		font-size 13px
		color #999
		font-weight normal
	.b-order-item__qty
		text-align center
	.b-order-item__cost
		width 200px
		font-size 13px!important
		
.b-order-list__actions
	padding 20px 0

	&.bordered
		border-bottom 1px solid $grey

	.like_button
	.drop_button
		margin 0 22px 0 22px		