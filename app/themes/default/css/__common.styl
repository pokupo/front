/* Хэлперы и переменные */
@import '../../../styles/helpers/*'

section.store
	padding 0 0 20px

section.catalog-banner
	padding-top 0


/* ---------------------------------------- *
 * Текстовые псевдо-кнопки с иконками       *
 * ======================================== */
.empty_button
.drop_button
.like_button
.cart_button
.check_button
	font-size 13px
	line-height 18px
	cursor pointer
	margin 0 auto
	display inline-block

.like_button
	.pseudo-link
		position relative

		&:before
			content ''
			display block
			position absolute
			top 8px
			left -22px
			margin-top -5px
			sprite($icon__like)

		&:hover:before
			sprite($icon__like--hover)

	&.active
		.pseudo-link
			&:before
				sprite($icon__like--active)

.drop_button
	opacity 1
	.pseudo-link
		position relative

		&:before
			content ''
			display block
			position absolute
			top 6px
			left -22px
			margin-top -5px
			sprite($icon__deleteall)

.print-button
	.pseudo-link
		position relative

		&:before
			content ''
			display block
			position absolute
			top 8px
			left -18px
			margin-top -5px
			sprite($icon__file)

:root .like_button .pseudo-link:before
	margin-top ie9(-9px)
:root .drop_button .pseudo-link:before
	margin-top ie9(-7px)

.empty_button
	float right
	.pseudo-link
		color $red
		border-bottom 1px solid rgba($red, 0.25)
		&:hover
			color darken($red,50%)
			border-bottom-color rgba(darken($red,50%), 0.5)

.cart_button
	.pseudo-link
		position relative

		&:before
			content ''
			display block
			position absolute
			top 6px
			left -24px
			margin-top -5px
			sprite($icon__cart__small)

.check_button
	margin 0 30px
	.pseudo-link
		position relative

		&:before
			content ''
			display block
			position absolute
			top 5px
			left -25px
			margin-top -5px
			sprite($icon__check)








@media only screen and (max-width: 640px)
	section.catalog-banner
		padding 0	




