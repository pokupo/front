/* Хэлперы и переменные */
@import '../../../styles/helpers/*'

/* Выпадайка "поддержка" */
.b-support-info
	&__title
		display inline-block
		padding 20px 8px 4px 64px
		color $a__link

		span 
			border-bottom 1px dotted rgba($a__link, 0.5)
			font-size 16px

			&:before
				content ''
				position absolute
				top 3px
				left -35px
				margin-top -3px
				sprite($icon__support)

			&:hover
			&.active
				&:before
					sprite($icon__support__hover)	

	&__content
		padding 40px 30px 0