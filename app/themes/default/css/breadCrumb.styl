/* Хэлперы и переменные */
@import '../../../styles/helpers/*'

.b-thermometer
	font-size 13px
	line-height 20px
	text-align left
	position relative
	top -34px
	margin 0 190px -30px 0
	white-space nowrap

	p 
		margin-bottom 15px
		margin-left 3px
	a
		text-decoration none
		border-bottom 1px solid rgba($a__link, 0.25)
		transition color, border-bottom-color 0.1s ease-in-out
		display inline-block
		overflow hidden
		text-overflow ellipsis
		white-space nowrap
		line-height 20px

		&:hover
			color $a__hover
			border-bottom 1px solid rgba($a__hover, 0.4)

		&:active
		&:focus
			color $a__active
			border-bottom 1px solid rgba($a__active, 0.4)

	.divider
	.current
		display inline-block
		overflow hidden
		line-height 20px

	.divider
		color #000
		margin 0 4px

	.current
		color #999

.nosidebar
	.b-thermometer
		padding-left 165px
		height 60px
		margin-bottom -24px
		top -25px

		p
			line-height 60px
			margin 0



@media only screen and (max-width: 640px)
	.b-thermometer 
		a
			max-width 80px

		.current
			display none

	.nosidebar 
		.b-thermometer
			padding 0
			margin 0
			text-align center
			top 0
