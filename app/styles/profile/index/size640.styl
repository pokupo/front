@media only screen and (max-width: 640px)
	.profile-nav.grey
		background rgba($grey, 0.5)
		text-align center

	.b-profile-nav
		width 100%
		background $grey

		.menu__item
			width 20%

			a
				&:before
					left 50%

				&:after
					pseudo()
					width 2px
					left 0
					top 10px
					bottom 10px
					background #e0ddd8

				&.icon__profile
					&:before
						margin-left -8px

				&.icon__favorites
					&:before
						margin-left -10px

				&.icon__cart
					&:before
						margin-left -10px

				&.icon__order
					&:before
						margin-left -10px

				&.icon__mail
					&:before
						margin-left -9px
			&.active
			&:first-child
			&.active + .menu__item
				a
					&:after
						display none


	.profile-nav .btn
		float none
		margin 11px 0 12px

	.b-profile-nav .menu__item a span
		display none !important

	/* Инфа о продавце */
	.b-profile-info__actions
		float none

	.b-profile-info--fullwidth .b-profile-info__summary
		margin-right 0

	.b-profile-info__summary
		.b-profile-info__title
			clear none
			margin-top 30px

	.profile-cart
		.b-profile-info__summary
			.b-profile-info__title
				margin-top 40px


	.b-profile-info--fullwidth 
		.b-profile-info__characters-list
			width 50%
			margin-right 0
			padding-right 60px

	.b-profile-info__characters-list
		z-index auto

		&:first-of-type
			clear left
			width 100%
			padding-top 10px
			margin-top 0

	.profile-cart
		.b-profile-info__characters-list:first-of-type
			border-top 1px solid #ccc
		

	.b-profile-info--fullwidth .b-profile-info__actions
		margin 0
		float right
		margin-top 170px
		margin-left -100%

	.b-order-list__buttons
		text-align center

















