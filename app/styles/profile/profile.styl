section.profile-content
section.profile-nav
	padding 0

.profile-nav
	text-align left

	.btn
		float right
		margin 18px 0 0

.b-profile-nav
	font-size 0
	width 75%

	.menu__item
		display inline-block
		font-size 14px
		height 80px

		a
			position relative
			display block
			padding 0 20px 0 50px
			height 80px
			line-height 80px
			text-decoration none
			border-bottom none
			white-space nowrap

			span 
				color #000

			&:before
				content ''
				display block
				position absolute
				top 50%
				left 20px

			&.icon__profile
				&:before
					margin-top -11px
					sprite($icon__profile)

			&.icon__favorites
				&:before
					margin-top -8px
					sprite($icon__favorites)

			&.icon__cart
				&:before
					margin-top -12px
					sprite($icon__cart)

			&.icon__order
				&:before
					margin-top -9px
					sprite($icon__order)


		&:hover
			background #e0ddd8

		&.active
			background $orange
			color #fff
			a
				color #fff
				
				span
					color #fff

				&.icon__profile
					&:before
						sprite($icon__profile__white)

				&.icon__favorites
					&:before
						sprite($icon__favorites__white)

				&.icon__carts
					&:before
						sprite($icon__carts__white)

				&.icon__order
					&:before
						sprite($icon__order__white)

			&:hover
				background $orange

				a
					cursor default

.password-control
	width 400px!important

.profile-content
	position relative

	.b-seller-info__summary
		margin-right 260px

	.b-seller-info__actions
		width 255px
		margin-top 32px

	.input-holder
		margin 0 0 20px

	h2
		font-size 30px
		margin-bottom 40px
		font-weight 300

		&.with-divider
			position relative
			overflow hidden
			
			&:after
				content ''
				position absolute
				width 100%
				border-top 1px solid $grey  
				margin-top .6em
				margin-left .4em

	.btn-border
		font-size 12px
		vertical-align top
		padding 13px 23px 11px
		border-width 2px
		margin 0

	.btn-circle
		opacity 1
		border-color $orange

		&:hover
			background $orange
			border-color $orange

		&:active
			background darken($orange, 25%)
			border-color darken($orange, 25%)

		&--trash
			width 40px
			height 40px

		&--drop
			border-color $red1

			&:hover
				background $red1
				border-color $red1
				&:before
					sprite($icon__drop--white)

			&:active
				background darken($red1, 25%)
				border-color darken($red1, 25%)
				&:before
					sprite($icon__drop--white)

	.btn-big
		padding 18px 50px 16px
		margin-right 30px

		&:last-child
			margin-right 0

	.b-order-table tfoot tr
		border-bottom none

	.b-order-table__action
		width 76px

	.b-order-table__drop
		width 110px


.b-fieldset
	margin 0 0 50px
	border none

#fullname
#address
	width 100%
	max-width 949px
	margin-bottom 20px



.btn-circle--trash
	margin-left 10px

	&:before
		content ''
		display block
		position absolute
		top 50%
		left 50%
		margin -8px 0 0 -8px
		sprite($icon__trash)

.btn-circle--edit
	&:before
		content ''
		display block
		position absolute
		top 50%
		left 50%
		margin -7px 0 0 -9px
		sprite($icon__edit)	


.input-status
	position relative
	display inline-block
	line-height 20px
	font-size 13px
	font-weight 800
	padding 3px 2px 3px 26px
	margin-top 19px

	&:before
		content ''
		display block
		position absolute
		top 50%
		left 0

	&--correct
		&:before
			sprite($icon__correct)
			margin-top -9px

	&--warning
		padding-left 22px
		&:before
			sprite($icon__warning)
			left 10px
			margin-top -9px

.input-action
	&--right
		float right
		margin 25px 0 14px
