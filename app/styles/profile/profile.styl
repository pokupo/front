section.profile-content
section.profile-nav
	padding 0

.profile-nav
	text-align left

	.btn
		float right
		margin 18px 0 0

.b-profile-nav
	font-size 0
	width 75%

	.menu__item
		display inline-block
		font-size 14px
		height 80px

		a
			position relative
			display block
			padding 0 20px 0 50px
			height 80px
			line-height 80px
			text-decoration none
			border-bottom none
			white-space nowrap

			&:before
				content ''
				display block
				position absolute
				top 50%
				left 20px

			&.icon__profile
				&:before
					margin-top -11px
					sprite($icon__profile)

			&.icon__favorites
				&:before
					margin-top -8px
					sprite($icon__favorites)

			&.icon__cart
				&:before
					margin-top -12px
					sprite($icon__cart)

			&.icon__order
				&:before
					margin-top -9px
					sprite($icon__order)


		&:hover
			background #e0ddd8

		&.active
			background $orange
			color #fff
			a
				color #fff

				&.icon__profile
					&:before
						sprite($icon__profile__white)

				&.icon__favorites
					&:before
						sprite($icon__favorites__white)

				&.icon__carts
					&:before
						sprite($icon__carts__white)

				&.icon__order
					&:before
						sprite($icon__order__white)

			&:hover
				background $orange

				a
					cursor default

.password-control
	width 400px!important

.profile-content
	position relative

	.input-holder
		margin 0 0 20px

	h2
		font-size 30px
		margin-bottom 40px
		font-weight 300

		&.with-divider
			position relative
			overflow hidden
			
			&:after
				content ''
				position absolute
				width 100%
				border-top 1px solid $grey  
				margin-top .6em
				margin-left .4em


	.btn-big
		padding 18px 50px 16px
		margin-right 30px

		&:last-child
			margin-right 0


.b-fieldset
	margin 0 0 40px
	border none

#fullname
#address
	width 100%
	max-width 949px
	margin-bottom 20px