.b-order-info
	margin -30px 0 30px
	font-size 13px
	clearfix()

	&__left
		line-height 20px
		text-align left
		float left
		width 480px

	&__right
		text-align right
		float right
		width 480px

		.b-status
			margin-left 30px

	&__label
		color #999
		margin-right 8px
		cursor default

	&__value
		z-index 0

.b-order-table__info
	margin-top 10px
	color #333

	.b-order-table__label
		font-weight normal
		margin-bottom 0

.b-order__actions
	text-align right
	
	.b-order-item__drop
		margin-left 0

	.btn-circle
		margin-right 4px

		&:last-child
			margin-right 0

.b-order-list__results
	.b-order-item__discount
		text-align left
		color #333