@media only screen and (max-width: 640px)

	body
		// background #cff

	.container
		max-width none
		padding 0 4px

	.columns
		margin-right 0

		.column 
			width 100%
			float none
			left 0!important

			.content
				margin 0 6px!important

		&.triple
			margin 0
			.column.double
				width 100%
				
		&.triple .column
		.double.column
			width 100%
			left 0
	
	.b-thermometer a
		max-width 80px
	.b-thermometer .current
		display none

	input[type="text"]
	input[type="email"]
	input[type="tel"]
	input[type="password"]
	textarea
	.input-holder
		max-width none

	.btn-huge
		padding 0 30px 8px 30px
		font-weight 400
		font-size 24px
		line-height 60px

	.split .orange
		left 0%
		top 50%
		width 100%

	.slider-control.prev
		left 0
	.slider-control.next
		right 0

	.b-page__footer 
		.b-inline-actions
			margin 40px 0 0
			clear both

	.tabs.tabs--noskin .tab__trigger
		padding-right 15px


	/* Выпадайка корзины */
	.b-cart-menu__body
		right 40px
		max-width 480px

		.b-cart-menu__patch
			display none

	.b-order-item.b-cart-menu__goods-item .b-order-item__name
		width 230px


	
	/* Force table to not be like tables anymore */
	table.responsive-table, 
	table.responsive-table thead,
	table.responsive-table tfoot, 
	table.responsive-table tbody,
	table.responsive-table th, 
	table.responsive-table td, 
	table.responsive-table tr
		display block !important
 
	/* Hide table headers (but not display none;, for accessibility) */
	table.responsive-table thead tr
		position absolute
		top -9999em
		left -9999em
 
	table.responsive-table tr
		border 1px solid $grey

	table.responsive-table tfoot tr
		border none
 
	table.responsive-table td
		/* Behave  like a "row" */
		border none
		position relative
		width 100%
		padding 10px 0 10px 50%  !important
		white-space normal
		text-align left
 
		&:before
			/* Now like a table header */
			position absolute
			/* Top/left values mimic padding */
			top 6px
			left 6px
			width 45% 
			padding-right 10px 
			white-space nowrap
			text-align left
			font-weight bold
			content attr(data-title) 



