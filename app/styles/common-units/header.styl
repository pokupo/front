section.header
	padding 0

#toggleNav
	display none
	font-size 14px
	padding 8px 16px
	position relative
	top 50px
	margin-right 185px
	overflow hidden
	cursor pointer
	text-transform uppercase
	font-weight 700
		
	&.active
		color $orange
		
.header
	position relative
	padding 0
	text-align left
	font-size 0

	.container 
		position static

	a 
		text-decoration none

	.logo
		float left
		display inline-block
		width 150px
		height 120px
		margin 0 54px 0 0
		background url('../images/logo/logo.png') 50% 50% no-repeat

	.menu
		position relative
		font-size 0

		&--opened
			margin-bottom 60px

		a 
			position relative
			display inline-block
			box-sizing border-box
			float left
			font-size 16px
			color #000
			transition 0.3s ease all
			font-size 16px
			border-bottom 3px solid transparent

			&:hover
			&.bordered 
				color #018F3C


		.submenu
			position absolute
			top 120px
			height 0
			z-index 11
			left -12px
			width 790px
			overflow hidden
			transition 0.3s ease all

			&.active
				height 60px

			&__item
				float left
				height 60px
				padding-top 24px

				&.active:first-of-type
					margin-left 12px

				a 
					display inline-block
					height 20px
					padding 0 12px
					margin-right 0px
					font-size 14px
					line-height 14px
					color #000
					text-align center
					white-space nowrap
					border-bottom none
					span
						transition all 0.3s ease-in-out
						display inline-block
						margin 0 auto
						border-bottom 1px solid rgba(0,0,0,0)

					&:hover
						span
							border-bottom-color rgba(0,0,0,0.3)

					&:after 
						display none
				&.active
					background $orange
					a
						color #fff
						&:hover
							span
								border-bottom-color rgba(255,255,255,0.3)

	.submenu-bg
		width 100%
		position absolute
		top 120px
		height 0
		left 0
		z-index 10
		background $grey
		transition all 0.3s ease-in-out

		&.active
			height 60px


.menu-login
	float right
	height 120px
	margin 0 -15px 0 -100%

	.not-logged-in
		padding 57px 0 33px

		a
			margin-top 4px
			padding 7px 15px
			font-size 14px
			font-weight 700
			text-transform uppercase
			transition 0.2s ease all

			&.menu-login__login
				color #000
				border-right 1px solid #c5c6c8

				&:before
					content ''
					display inline-block
					sprite($icon__login)
					margin-right 5px

			&.menu-login__register
				color $green

			&:hover
				color $orange
	.logged-in
		padding-right 15px

.header
	.logged-in
		.btn
			margin 40px 0 0 0


.b-navigation
	display inline-block
	height 120px

	a
		height 120px
		line-height 120px
	& > a
		padding 0 5px
		margin-right 15px

	.menu__item
		height 120px
		display inline-block
		
		a 
			line-height 18px
			font-size 16px
			transition all .2s ease-in-out

			&:after
				content ''
				display block
				width 0
				height 0
				position absolute
				bottom 0
				left 50%
				margin-left -8px
				border 8px solid transparent
				border-top none
				transition 0.3s ease all

		&.with-submenu
			a:hover
			a.bordered
				border-bottom-color #018F3C
				&:after
					border-bottom-color #018F3C
		&.active
			& > a
				color #018F3C
				border-bottom-color #018F3C
				&:after
					border-bottom-color #018F3C
		

		a
			padding 54px 15px 40px

.header .dropdown__trigger.active
	z-index 151
.header .dropdown__content
	z-index 150
	text-align center

/* Выпадайка профиля */
.b-profile-menu
	width 150px
	padding 85px 0 2px
	top -20px
	left -45px
	
	&__name
		color #808080
		margin-bottom 13px
		line-height 13px

	.menu__item
		border-top 1px solid $grey
		padding 0

		a
			float none
			display block
			padding 8px 20px 9px
			border-bottom none
			color $a__link
			&:hover 
				color $a__hover

	&__logout
		position relative
		&:after
			content ''
			position absolute
			top 50%
			right 10px
			display block
			margin-top -7px
			sprite($icon__logout)


.dropdown__trigger.icon__profile.active
	.circles-menu__num
		display none

/* Выпадайка корзины */
.b-cart-menu
	width 150px
	padding 80px 0 2px
	top -20px
	left -45px

	&__patch
		position absolute
		display block
		top -10px
		right 25px
		height 10px
		width 150px
		background #fff

	&__body
		position absolute
		top 110px
		right -25px
		width 527px
		min-height 120px

		&__goods
			width 100%

	&__results
		text-align left
		line-height 60px
		padding 23px 30px 20px
		margin-right 200px
		margin-bottom 0
		font-size 16px
		color #000

	&__amount
		width 120px
		font-size 18px!important
		font-weight 800
		color $green
		margin-left 30px

	&__order-button
		float right
		margin 30px 32px 30px 0
		line-height 1

	&__cart-button
		float right
		line-height 1
		margin 30px 15px 30px 0
		font-size 13px
		padding 18px 10px
		text-decoration underline !important

.b-order-item
	font-size 0
	line-height 30px
	border-bottom 1px solid $grey
	cursor default
	user-select none
	white-space nowrap
	clearfix()

	&:hover
		background rgba($white, 0.4)
	
	& > div
		font-size 16px
		line-height 100px
		display inline-block
		vertical-align middle

	&__checkbox
		width 35px
		padding-left 2px

	&__img
		width 81px
		padding 0 8px
		img
			width 100%
			height auto
			vertical-align middle
		& + .b-order-item__name
			padding-left 0
		
	&__name
		width 280px
		padding 0 25px 0 30px
		line-height 20px!important
		white-space normal!important

		span 
			line-height 20px
			color $a__link

	&__price
		color #999
		line-height 25px!important

		.b-item__price--old
			font-size 12px

	&__qty
		width 225px
		padding 0 0 0 20px
		text-align center

	&__cost
		padding 0 20px 0 30px
		width 120px
		font-size 18px!important
		font-weight 800
		line-height 25px!important
		color $green

		.b-order-item__discount
			display block
			font-weight 800
			font-size 12px
			color #333

	&__delay
		width 140px
		padding 0 5px
		text-align center

	&__drop
		margin-left 10px
		opacity 1
		transition border-color, opacity 0.2s ease-in-out

		&:before
			sprite($icon__drop)
		&:hover
			border-color $red1
		&:active
			border-color #882626
			&:before
				sprite($icon__drop__active)

	&__action
		float right
		min-width 150px
		text-align center
		margin-left 20px

		.cart_button
		.btn
			margin 0 0 0 10px
			border-width 4px
			padding 13px 22px 12px

		.cart_button
			line-height 20px


	.b-catalog-item__limits
		text-align center

	/* Выпадайка меню */
	&.b-cart-menu__goods-item
		line-height 30px
		min-height 63px
		padding 4px 0

		& > div
			line-height 60px

		.b-order-item__name
			width 250px

		.b-order-item__qty
			width 80px
			padding 0 5px

.b-thead
	height 50px
	line-height 50px

	&:hover
		background #fff

	& > div
		line-height 50px
		font-size 13px
		color #999
		font-weight normal
	.b-order-item__qty
		text-align center
	.b-order-item__cost
		width 200px
		font-size 13px!important
		
.b-order-list__actions
	padding 20px 0

	&.bordered
		border-bottom 1px solid $grey

	.like_button
	.drop_button
		margin 0 22px 0 22px
			
.menu__item__num
	position absolute
	top 9px
	right 4px
	font-weight normal
	font-size 14px
	line-height 14px
	color #fff
	display inline-block
	text-align center
	background #ED1C24
	padding 3px 6px
	border-radius 100px

.b-increment-group
	display inline-block
	white-space nowrap
	line-height 30px
	vertical-align middle

	&__darr
	&__uarr
		height 30px
		width 20px
		display inline-block
		vertical-align top
		cursor pointer
		user-select none
		text-align center
		font-size 20px
		font-weight 700
		color $orange
	
		&:after
			content ''
			display block
			position relative
			width 0
			height 0
			top 50%
			left 50%
			border 5px solid transparent
		
	&__darr
		&:after
			margin -2px 0 0 -5px
			border-top-color $orange
		&:hover:after
			border-top-color darken($orange, 50%)
		&:active:after
			margin-top -1px

	&__uarr
		&:after
			margin -7px 0 0 -5px
			border-bottom-color $orange
		&:hover:after
			border-bottom-color darken($orange, 50%)
		&:active:after
			margin-top -6px



	&__qty
		min-width 24px
		display inline-block
		text-align center
		line-height 30px
		height 30px
		vertical-align top
		




















