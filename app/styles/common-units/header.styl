section.header
	padding 0

#toggleNav
	display none
	font-size 14px
	padding 8px 16px
	position relative
	top 50px
	margin-right 185px
	overflow hidden
	cursor pointer
	text-transform uppercase
	font-weight 700
		
	&.active
		color $orange
		
.header
	position relative
	padding 0
	text-align left
	font-size 0

	.container 
		position static

	a 
		text-decoration none

	.logo
		float left
		display inline-block
		width 150px
		height 120px
		margin 0 54px 0 0
		background url('../images/logo/logo__beta.png') 50% 50% no-repeat // @todo remove __beta

	.menu
		position relative
		font-size 0

		&--opened
			margin-bottom 60px

		a 
			position relative
			display inline-block
			box-sizing border-box
			float left
			font-size 16px
			color #000
			transition 0.3s ease all
			font-size 16px
			border-bottom 3px solid transparent

			&:hover
			&.bordered 
				color #018F3C


		.submenu
			position absolute
			top 120px
			height 0
			z-index 11
			left -12px
			width 790px
			overflow hidden
			transition 0.3s ease all

			&.active
				height 60px

			&__item
				float left
				height 60px
				padding-top 24px

				&.active:first-of-type
					margin-left 12px

				a 
					display inline-block
					height 20px
					padding 0 12px
					margin-right 0px
					font-size 14px
					line-height 14px
					color #000
					text-align center
					white-space nowrap
					border-bottom none
					span
						transition all 0.3s ease-in-out
						display inline-block
						margin 0 auto
						border-bottom 1px solid rgba(0,0,0,0)

					&:hover
						span
							border-bottom-color rgba(0,0,0,0.3)

					&:after 
						display none
				&.active
					background $orange
					a
						color #fff
						&:hover
							span
								border-bottom-color rgba(255,255,255,0.3)

	.submenu-bg
		width 100%
		position absolute
		top 120px
		height 0
		left 0
		z-index 10
		background $grey
		transition all 0.3s ease-in-out

		&.active
			height 60px


.b-navigation
	display inline-block
	height 120px

	a
		height 120px
		line-height 120px
	& > a
		padding 0 5px
		margin-right 15px

	.menu__item
		height 120px
		display inline-block
		
		a 
			line-height 18px
			font-size 16px
			transition all .2s ease-in-out

			&:after
				content ''
				display block
				width 0
				height 0
				position absolute
				bottom 0
				left 50%
				margin-left -8px
				border 8px solid transparent
				border-top none
				transition 0.3s ease all

		&.with-submenu
			a:hover
			a.bordered
				border-bottom-color #018F3C
				&:after
					border-bottom-color #018F3C
		&.active
			& > a
				color #018F3C
				border-bottom-color #018F3C
				&:after
					border-bottom-color #018F3C
		

		a
			padding 54px 15px 40px

.subheader .dropdown__trigger.active
	z-index 151
.subheader .dropdown__content
	z-index 150
	text-align center


.dropdown__trigger.icon__profile.active
	.circles-menu__num
		display none
			
.menu__item__num
	position absolute
	top 9px
	right 4px
	font-weight normal
	font-size 14px
	line-height 14px
	color #fff
	display inline-block
	text-align center
	background #ED1C24
	padding 3px 6px
	border-radius 100px

.b-increment-group
	display inline-block
	white-space nowrap
	line-height 30px
	vertical-align middle

	&__darr
	&__uarr
		height 30px
		width 20px
		display inline-block
		vertical-align top
		cursor pointer
		user-select none
		text-align center
		font-size 20px
		font-weight 700
		color $orange
	
		&:after
			content ''
			display block
			position relative
			width 0
			height 0
			top 50%
			left 50%
			border 5px solid transparent
		
	&__darr
		&:after
			margin -2px 0 0 -5px
			border-top-color $orange
		&:hover:after
			border-top-color darken($orange, 50%)
		&:active:after
			margin-top -1px

	&__uarr
		&:after
			margin -7px 0 0 -5px
			border-bottom-color $orange
		&:hover:after
			border-bottom-color darken($orange, 50%)
		&:active:after
			margin-top -6px



	&__qty
		min-width 24px
		display inline-block
		text-align center
		line-height 30px
		height 30px
		vertical-align top
		




















