.create-shop

	.btn-create
		padding 0 50px 8px 50px
		margin 30px 0
		font-size 44px
		line-height 70px
		background #333
		&:hover 
			background $orange
		&:active
			background #cc8600

		&:hover 
		&:active
			.icon-store
				sprite($icon-store__black)
		&:disabled
		&.disabled
			.icon-store
				sprite($icon-store__red)
				opacity 0.3

		.icon-store
			display inline-block
			position relative
			top 9px
			sprite($icon-store__orange)
			transition none

