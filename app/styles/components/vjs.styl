.vjs-pokupo-skin
	color #fff

	.vjs-big-play-button
		cursor pointer
		line-height 240px
		margin -120px 0 0 -120px
		opacity 1
		position absolute
		top 50%
		left 50%
		height 240px
		width 240px
		border-radius 240px
		border 8px solid #fff
		transition opacity, border-color 100ms cubic-bezier(0.455, 0.03, 0.515, 0.955)
		z-index 2
	
		&:before
			content ""
			position absolute
			display block
			top 50%
			left 50%
			border-color transparent transparent transparent #fff
			border-style solid
			margin -55px 0 0 -38px
			border 56px solid transparent
			border-width 56px 100px 56px
			transition opacity, border-color 100ms cubic-bezier(0.455, 0.03, 0.515, 0.955)

		&:hover
			border-color $orange
			&:before
				border-left-color $orange

		
	&.vjs-controls-disabled
	&.vjs-has-started
	&.vjs-using-native-controls 
		.vjs-big-play-button
			opacity 0
	
	.vjs-control-bar
		height 80px
		opacity 0
		position absolute
		right 0
		bottom 0
		left 0
		z-index 2s
	
	&.vjs-has-started .vjs-control-bar
		opacity 1
		transition opacity 100ms cubic-bezier(0.455, 0.03, 0.515, 0.955)
	
	&.vjs-has-started.vjs-user-inactive.vjs-playing 
		.vjs-control-bar
		& + .close-video
			opacity 0
			transition opacity 1s cubic-bezier(0.455, 0.03, 0.515, 0.955)

	
	&.vjs-using-native-controls .vjs-control-bar, 
	&.vjs-controls-disabled .vjs-control-bar
		display none
	
	.vjs-progress-control
		position absolute
		top 0
		right 95px
		bottom 0
		left 115px
	
		.vjs-progress-holder
			cursor pointer
			height 20px
			margin-top -10px
			position absolute
			top 50%
			right 0
			left 0
		
			&:after
				background-color rgba(#fff, 0.15)
				content ""
				display block
				height 4px
				margin-top -2px
				position absolute
				top 50%
				right 0
				left 0
		
		.vjs-load-progress
		.vjs-play-progress
			height 4px
			margin-top -2px
			position absolute
			top 50%
			right 0
			left 0
		.vjs-play-progress
			background-color $orange
		.vjs-load-progress
			background-color rgba(#fff,0.3)
			.vjs-control-text
				display none

		.vjs-slider-handle
			display block
			position absolute
			width 10px
			height 10px
			border-radius 10px
			background $orange
			top 50%
			margin-top -5px

			.vjs-control-text
				display none

	.vjs-duration
		position absolute
		top 50%
		right 95px
		margin-top 10px
		.vjs-control-text
			display none

		
	.vjs-play-control
		cursor pointer
		margin-top -30px
		position absolute
		top 50%
		left 30px
		height 60px
		width 60px
		border 4px solid $orange
		border-radius 60px
		transition background 0.1s cubic-bezier(0.455, 0.03, 0.515, 0.955)
	
		&:before
			content ""
			display block
			border-color transparent transparent transparent $orange
			border-style solid
			border-width 5px 8px
			position absolute
			top 50%
			left 50%
			margin -5px 0 0 -3px
		&:hover
			background $orange
			&:before
				border-left-color #000
			
		
	&.vjs-playing .vjs-play-control
		&:before
		&:after
			background-color $orange
			border none
			content ""
			display block
			height 10px
			position absolute
			top 50%
			left 50%
			width 1px
			margin -5px 0 0 -3px
	
		&:after
			margin-left 2px

		&:hover
			background $orange
			&:before
			&:after
				background #000
	
	.vjs-fullscreen-control
		border 3px solid #fff
		cursor pointer
		margin-top -7px
		position absolute
		top 50%
		right 20px
		height 14px
		width 22px
		&:hover
			border-color $orange
	
	&.vjs-fullscreen .vjs-fullscreen-control
		background transparent
		height 5px
		width 5px
		border-color #fff
		border-style solid
		border-width 6px 14px 3px 3px
		box-sizing content-box
		&:hover
			border-color $orange
		
	.vjs-volume-control
		cursor pointer
		margin-top -7px
		position absolute
		top 50%
		right 55px
		height 14px
		width 22px
		&:hover
			.vjs-volume-level
				background-image url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACwAAAAcAQMAAAAgMM/vAAAABlBMVEUAAAD/qAB9IbvDAAAAAXRSTlMAQObYZgAAABlJREFUCNdjAAH+D0RS/4miQKqJpP5TgwIA8o9LtWN3N8wAAAAASUVORK5CYII=')

	.vjs-volume-bar
		background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACwAAAAcCAQAAACw95UnAAAAMElEQVRIx2NgoBL4n4YKGUYNHkEG4zJg1OCRYDCpBowaPJwMppbLRg0eNXjUYBLEAXWNUA6QNm1lAAAAAElFTkSuQmCC')
		background-size 22px 14px
		height 100%
		width 100%
	
	.vjs-volume-level
		background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACwAAAAcAQMAAAAgMM/vAAAABlBMVEUAAAD///+l2Z/dAAAAAXRSTlMAQObYZgAAABlJREFUCNdjAAH+D0RS/4miQKqJpP5TgwIA8o9LtWN3N8wAAAAASUVORK5CYII=')
		background-size 22px 14px
		height 100%


	.vjs-current-time,
	.vjs-time-divider,
	.vjs-remaining-time,
	.vjs-play-progress .vjs-control-text,
	.vjs-play-control .vjs-control-content,
	.vjs-fullscreen-control .vjs-control-text,
	.vjs-volume-handle,
	.vjs-mute-control
		display none
	

.video-js
	background-color black
	padding 0
	position relative
	user-select none
	vertical-align middle

	.vjs-tech
		position absolute
		top 0
		left 0
		height 100%
		width 100%
	
	&:-moz-full-screen
		position absolute
	
	&.vjs-fullscreen
		position fixed
		overflow hidden
		z-index 1000
		left 0
		top 0
		bottom 0
		right 0
		width 100% !important
		height 100% !important
	
	&:-webkit-full-screen
		width 100% !important
		height 100% !important
	
	&.vjs-fullscreen.vjs-user-inactive
		cursor none
	

body.vjs-full-window
	height 100%
	margin 0
	overflow-y auto
	padding 0


.vjs-poster
	background-repeat no-repeat
	background-position 50% 50%
	background-size contain
	cursor pointer
	height 100%
	margin 0
	padding 0
	position relative
	width 100%

	img
		display block
		margin 0 auto
		max-height 100%
		padding 0
		width 100%
	
.video-js.vjs-using-native-controls .vjs-poster
		display none
	
.vjs-playback-rate,
.vjs-live-display
	display none
