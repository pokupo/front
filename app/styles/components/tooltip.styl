.b-tooltip
	text-align center
	color #333
	background #fff
	position absolute
	z-index 999
	padding 8px 18px
	font-size 13px
	font-weight 800
	line-height 20px
	box-shadow 0 4px 7px rgba(0,0,0,0.25)
 
	&:after
		content ''
		position absolute
		left 50%
		top -20px
		bottom auto
		margin-left -10px
		width 0
		height 0
		border 10px solid transparent
		border-bottom-color #fff
 
	&.bottom:after
		border-top-color #fff
		border-bottom-color transparent
		bottom -20px
		top auto
 
	&.left:after
		left 10px
		margin 0
 
	&.right:after
		right 10px
		left auto
		margin 0
