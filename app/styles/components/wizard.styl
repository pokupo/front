.b-wizard
	position relative
	padding-bottom 50px

	&__holder

		.content  
			z-index 88 

		.b-wizard__step-title
			font-weight 300
			font-size 30px
			z-index 88

	ul.b-wizard__steps
		display inline-block
		margin 19px auto 80px
		height 30px
		border-bottom 2px solid $orange
		font-size 0

		li
			display inline-block
			margin 0 30px 0 0
			font-size 16px

			&:last-child
				margin-right 0

			a
				display block
				height 60px
				width 60px
				text-decoration none
				border-radius 60px
				border 2px solid $orange
				background #fff
				color #000
				z-index 99

				.b-wizard__step-num
					display inline-block
					vertical-align middle
					text-align center
					padding 5px
					padding-top 0
					font-size 16px
					line-height 54px
					font-weight bold

				&.selected
					background $orange
					border-color darken($orange, 10%)
					cursor default


				&.done 
					background $orange
					z-index 99

					&:hover
						border-color darken($orange, 10%)

				&.disabled
					cursor default   

				&.error
					color #fff !important  
					background $red !important
					border-color $red !important          



.b-wizard
	
	&__step-content
		margin-top 35px
	
	&__actions
		text-align center
	
	&__action
		display inline-block
		text-align center
		margin 0 12px
		padding 20px 45px
		color #000
		background #fff
		text-decoration none
		font-size 20px
		font-weight regular
		text-transform uppercase
		border 4px solid #ccc
		border-radius 50px
		cursor pointer
		user-select none

		&.btn-prev-step
			border-color $grey
			color #000
			&:hover
				background $grey
				color #000

		&.btn-next-step
			border-color $orange
			&:hover
				background $orange
				color #fff

		&.btn-last-step
			border-color $orange
			&:hover
				background $orange
				color #fff

		&.btn-disabled
			display none

	&__loader
		position relative  
		display none
		float left  
		margin 2px 0 0 2px
		padding 8px 10px 8px 40px
		border 1px solid #FFD700 
		font bold 13px Verdana, Arial, Helvetica, sans-serif 
		color #5A5655       
		background #FFF url(../images/loader.gif) no-repeat 5px  
		z-index 998

	&__message
		position relative  
		display none
		float left
		margin 4px 0 0 5px
		padding 5px
		border 1px solid #FFD700 
		background-color #FFFFDD  
		font normal 12px Verdana, Arial, Helvetica, sans-serif 
		color #5A5655         
		z-index 999
		min-width 200px  

		.content
			font normal 12px Verdana,Arial,Helvetica,sans-serif
			padding 0px
			float left

		.close
			border 1px solid #CCC
			border-radius 3px
			color #CCC
			display block
			float right
			margin 0 0 0 5px
			outline-style none
			padding 0 2px 0 2px
			position relative
			text-align center
			text-decoration none

			&:hover
				color #EA8511
				border 1px solid #EA8511  
