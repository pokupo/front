.register
	padding-top 28px
	text-align center

	.columns
		margin-top 38px

	.first.column
		.content
			margin-left 30px
	.third.column
		.content
			margin-right 50px
		
	h3
		font-weight 400
		font-size 13px
		line-height 20px
		margin 0
		text-align center
		cursor default

	.btn-lg.btn-red
		margin 28px 0 25px

		i.icon-store:before
			sprite($icon-store__red)

		&:hover
			box-shadow 0 1px 0 0px rgba(154, 25, 21, 0.8)

		&:active
			box-shadow none

		&:hover 
		&:active
			i.icon.icon-store:before
				sprite($icon-store__white)



		


.sign-in
	position relative
	display inline-block
	margin 7px auto 5px
	font-size 0

	&:before, 
	&:after
		content " "
		display block
		width 50px
		position absolute
		left -62px
		top 50%
		border 1px solid #fff
		height 2px

	&:after
		left auto
		right -62px

	.btn-group-item
		display table-cell
		vertical-align middle
		border 2px solid #fff
		border-left-width 1px
		font-size 16px
		height 50px
		background rgba(255, 255, 255, 0)
		transition background 0.2s ease-in-out

		&:first-child
			border-radius 30px 0 0 30px
			border-left-width 2px
			a
				padding-left 50px

		&:last-child
			border-radius 0 30px 30px 0
			a
				padding-right 50px

		a
			display block
			padding 9px 30px
			text-decoration none
			text-align center

			.icon
				display inline-block
				vertical-align middle
				width 36px
				height 36px
				z-index 1
				position relative


			.icon-vk
				sprite($icon-vk)
			.icon-google
				sprite($icon-google)
			.icon-zpay
				sprite($icon-zpay)
			&:hover
				.icon-vk
					sprite($icon-vk__hover)
				.icon-google
					sprite($icon-google__hover)
				.icon-zpay
					sprite($icon-zpay__hover)
			
		&:hover
		&:active
		&.active
			background rgba(255, 255, 255, 1)
		&.disabled
			background $orange
			border 2px solid rgba(255, 255, 255, 0.3)
			cursor default
			a
				cursor default
			.icon 
				opacity 0.3
			&:hover
				.icon-vk
					sprite($icon-vk)
				.icon-google
					sprite($icon-google)
				.icon-zpay
					sprite($icon-zpay)










