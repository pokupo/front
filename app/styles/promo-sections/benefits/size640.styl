@media only screen and (max-width: 640px)
	.benefits-slider
		width auto

		.owl-item
			padding-right 10px

		.benefit
			width 120px
			height 120px
			i
				margin -5px 0 0 -5px
				transform scale(0.7)

		h2
			font-size 24px
			max-width 100%
			overflow hidden
			text-overflow ellipsis
		p
			margin-bottom 10px
			text-align left
