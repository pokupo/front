.team 
	.grey
		padding 40px 0
	h1
		margin-bottom 20px
	
.person
	position relative
	width 270px
	padding 0 20px 0 0
	display inline-block
	vertical-align top

	&__name
		font-weight bold
		font-size 18px
		line-height 20px
		margin-bottom 2px

	p 
		font-size 13px
		line-height 20px

	&__position
		font-style italic

	&__about
		text-align center

	&__photo
		display block
		position relative
		margin 10px auto 25px
		width 160px
		height 160px
		border-radius 100px
		overflow hidden

		&:after
			content ''
			display block
			position absolute
			top 50%
			left 50%
			margin -40px 0 0 -39px

		&.person__photo--male 
		&.person__photo--female 
			border 2px solid $orange

		&.person__photo--male 
			&:after
				sprite($male)
		&.person__photo--female
			&:after
				sprite($female)

.team-list
	padding-top 13px
	margin-right -57px

	.person
		margin-right 57px

	.person__about
		color #ccc


.our-team
	position relative
	margin 10px -20px 0 0
	padding 0 0 0
	width 999px

	.owl-prev
	.owl-next
		top 85px

	.owl-prev
		sprite($arrow-prev__black)

	.owl-next
		sprite($arrow-next__black)