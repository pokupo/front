hgroup.with-icon
	margin-top 10px
	padding 179px 0 18px
	position relative

	h1
		margin-bottom 19px

	&:before
	&:after
		content ''
		display block
		position absolute 
		left 50%
		top 0

	&:after
		border 2px solid $orange
		border-radius 100px
		width 164px
		height 164px
		margin 0 0 0 -82px


section.start
	.with-icon
		&:before
			margin 45px 0 0 -45px
			sprite($start)

section.howto
	.with-icon
		&:before
			margin 30px 0 0 -53px
			sprite($howto)

section.price
	.with-icon
		&:before
			margin 48px 0 0 -17px
			sprite($price)