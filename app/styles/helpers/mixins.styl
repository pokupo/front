// Clear the float on any element.
clearfix()
	&:before,
	&:after
		content ''
		display table
	&:after
		clear both

text-hide()
	overflow: hidden
	text-indent -9999em

pseudo()
	content ''
	position absolute
	display block






/* Вспомогательные классы */

.hidden
	display none

.invisible
	visibility hidden

.center-block
	display block
	margin-left auto
	margin-right auto

::-ms-reveal
::-ms-clear
	display none!important

// Fix no working `-webkit-text-size-adjust:100%;` in Android.
fix-text-size-adjust()
	background-image linear-gradient(transparent, transparent)

/* /Вспомогательные классы */

ie8(value)
	return value unquote("\9")

ie9(value)
	return value unquote("\0")