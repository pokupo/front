// Clear the float on any element.
clearfix()
	&:before,
	&:after
		content ''
		display table
	&:after
		clear both

text-hide()
	overflow: hidden
	text-indent -9999em

pseudo()
	content ''
	position absolute
	display block

pseudo__center()
	content ''
	display block
	position absolute
	left 50%
	top 50%
	
centered_icon($icon)
	position relative
	&:after
		pseudo__center()
		sprite($icon)
		margin-left -(spriteWidth($icon)/2)
		margin-top -(spriteHeight($icon)/2)	

drop-shadow()
	background-color #fff
	border-bottom 1px solid #e2e2e2
	box-shadow 0 4px 8px rgba(0,0,0,0.3)
	padding-bottom 2px

	&:before
	&:after
		content ''
		position absolute
		display block
		left 0
		right 0

	&:before
		height 2px
		background #dcdcdc
		border-top 1px solid #d6d6d6
		bottom 0
		z-index 0

	&:after
		height 50px
		bottom -1px
		box-shadow 0 10px 20px -7px rgba(0,0,0,0.3)
		z-index -1