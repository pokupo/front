section.inner
	background $white
	text-align left

	h1
		margin-bottom 20px
		
a.with-icon
	position relative
	display inline-block
	padding-left 24px

	&:before
		content ''
		display block
		position absolute
		top 50%
		left 4px
		margin -8px 0 0 0

	&.with-icon--print
		&:before
			left 1px
			sprite($icon__print)
	&.with-icon--file
		&:before
			sprite($icon__file)

.b-inline-actions
	li 
		display inline-block
		margin-right 20px
		font-size 13px
		&:last-child
			margin-right 0
	&__desc
		color #999

h1 + .b-inline-actions
	position relative
	

.b-page
	background $grey
	text-align left
	font-size 13px
	line-height 20px
	margin 30px -50px 30px

	&__header
	&__content
	&__footer
		padding 20px 50px

	&__header
		padding-top 50px
		border-bottom 1px solid #ccc

	&__icon
		position relative
		margin-right -100%
		margin-top -20px
		float left
		left -105px
		width 84px
		height 84px
		border 3px solid $orange
		text-align center
		font-size 58px
		font-weight 800
		line-height 78px
		color $orange
		border-radius 84px
		user-select none
		cursor default

	&__brief
		margin-left 105px

	&__content
		h1	
		h2
			font-size 18px
			text-transform uppercase
			line-height 20px
			font-weight 800
			margin 0 0 16px
			padding-top 20px

		& > h2:first-child
			padding-top 0
		h3
			line-height 20px
			font-size 13px
			font-weight 800
			margin-bottom 0

	&__footer
		.b-share
			float left

		.b-inline-actions
			margin 2px 0 20px 390px

		a.with-icon
			display inline-block










