.events
	h1
		text-align center
		margin-bottom 40px

.partners
.events
	.btn-orange
		padding 12px 100px
		border-width 2px
		background transparent!important
		text-transform uppercase 
		font-weight 400
		font-size 15px
		&:hover
			color $orange
			box-shadow none
		&:active
			color #cc8600
			border-color #cc8600

	.btn-load
		display block
		width 314px
		text-align center
		padding 21px 100px 20px
		white-space nowrap

.event
	text-align left
	padding 0 0 60px

	h1
		text-align left
		margin-bottom 10px

	&:last-child
		padding-bottom 0

	&__date
		font-size 13px
		line-height 20px
		margin-bottom 10px
		color #666

	&__title
		font-size 18px
		font-weight 800
		color #000
		margin-bottom 20px

		a
			color #000
			text-decoration none
			border-bottom 1px solid rgba(0,0,0,0.25)

			&:hover
				color #ed1c24
				border-bottom-color rgba(237,28,36,0.4)
	&__brief
		text-align left

	&__banner
	&__promo
		img 
			width 100%
			max-width 100%
			height auto
	&__promo
		margin-bottom 30px

.inline-gallery
	margin-top 60px
	margin-bottom 20px 

.btn-back
	position relative
	padding 12px 20px 12px 40px
	border-width 2px
	background transparent!important
	text-transform uppercase 
	font-weight 400
	font-size 15px

	&:before
		content ''
		display block
		sprite($btn__backarrow)
		position absolute
		top 50%
		left 13px
		margin-top -5px

	&:hover
		color $orange
		box-shadow none
	&:active
		color #cc8600
		border-color #cc8600
		
		&:before
			sprite($btn__backarrow-hover)