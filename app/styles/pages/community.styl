.community

	h1.with-icon
		margin-top 10px
		padding 115px 0 20px
		position relative

		&:before
			content ''
			display block
			position absolute 
			margin-left -104px
			left 50%
			top 0
			sprite($community)

	.socials
		margin-top 58px

.btn-social
	position relative
	margin 10px 0
	padding 18px 60px 17px 160px
	font-weight 300

	&:after
		content ''
		display block
		position absolute
		top -3px
		bottom -3px
		left -3px
		right -3px
		background rgba(0,0,0,0)
		border-radius 100px
		transition background 0.1s ease-in-out

	i.icon
		display block
		height 60px
		width 102px
		position absolute
		left 0
		top -3px
		border-right 2px solid rgba($vk_color, 0.3)
		border-radius 100px 0 0 100px
		transition border-color 0.1s ease-in-out

		&:before
			content ''
			display block
			position absolute
			left 50%
			top 50%

	&:hover
		color #fff
		i.icon
			border-right 2px solid rgba(255,255,255,0.3)

	&:active
		position relative
		top 1px
		&:after
			background rgba(0,0,0,0.5)
			box-shadow inset 0 2px 8px 1px rgba(0, 0, 0, 0.3)

	&__vk
		border-color $vk_color
		color $vk_color
		i.icon
			border-right 2px solid rgba($vk_color, 0.3)
			&:before
				margin -12px 0 0 -21px
				sprite($social__icon-vk)

		&:hover
			border-color $vk_color
			background-color $vk_color
			i.icon:before
				sprite($social__icon-vk__hover)

