.rates 
	position relative
	background $white
	padding 0 0 40px

	h1
		padding-top 65px
		margin-bottom 38px

	&__bg-top
		height 187px
		width 100%
		position absolute
		top 0
		left 0
	&__bg-bottom
		height 170px
		width 100%
		position absolute
		bottom 0
		left 0

	.slider 
		margin-top 28px

	.fotorama__shadows--left
	.fotorama__shadows--right
		&:after
		&:before
			top 40px

	.slider-control
		top 57px

.rate
	background rgba(255,255,255,0)
	transition background 0.3s ease-in-out

	&:hover
		padding-left 20px
		padding-right 20px
		/* margin 0 0 0 -20px!important */
		background rgba(255,255,255,1)

		.icon
			transform scale(1.1)


	h1
		font-size 30px
		margin 26px 0 10px
		padding-top 0
	h2
		font-size 18px
		line-height 20px
		font-weight 300
		position relative
		padding-bottom 18px
		margin-bottom 14px

		&:after
			content ""
			display block
			height 1px 
			width 46px
			background $green
			position absolute
			margin-left -23px
			left 50%
			bottom 0
	p 
		font-size 14px
		line-height 20px
		font-weight 400
		margin-bottom 0

		strong.num
			font-weight 800

.rate__icon
	display block
	border-radius 200px
	border 2px solid #777
	margin 0 auto
	position relative
	box-sizing content-box

	.icon
		display block
		position absolute
		top 50%
		left 50%
		transition all 0.3s ease-in-out

.grade-1
	.rate__icon
		margin 6px auto
		border 2px solid #000
	h1
		margin-top 32px
.grade-2
	.rate__icon
		margin 3px auto
		border 5px solid $green
	h1
		margin-top 29px
		color $green
.grade-3
	.rate__icon
		border 8px solid $orange
	h1 
		color $orange

.startup 
	.rate
		padding 120px 0 100px
	.rate__icon
		width 180px
		height 180px
		.icon
			margin -40px 0 0 -46px

	.grade-1
		.icon
			sprite($rate__startup-1)
	.grade-2
		.icon
			sprite($rate__startup-2)
	.grade-3
		.icon
			sprite($rate__startup-3)		
.business
	.rate
		padding 100px 0  70px
	.rate__icon
		width 230px
		height 230px
		.icon
			margin -44px 0 0 -68px
	.grade-1
		.icon
			sprite($rate__business-1)
	.grade-2
		.icon
			sprite($rate__business-2)
	.grade-3
		.icon
			sprite($rate__business-3)	
.company
	.rate
		padding  70px 0  45px
	.rate__icon
		width 280px
		height 280px
		.icon
			margin -70px 0 0 -93px

	.grade-1
		.icon
			sprite($rate__company-1)
	.grade-2
		.icon
			sprite($rate__company-2)
	.grade-3
		.icon
			sprite($rate__company-3)

.rate__helper
	padding-top 49px
	height 170px
	margin -20px 0 -40px

	p 
		margin-bottom 0
		color #fff

	.btn-orange
		background #333
		padding 18px 57px 16px
		margin-top 18px
		font-size 15px
		line-height 18px
		font-weight 400
		text-transform uppercase
		&:hover
			background $orange
		&:active
			background #cc8600

