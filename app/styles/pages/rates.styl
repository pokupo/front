section.rates
	padding-top 0

.rates 
	position relative
	background $white
	
	h1
		padding-top 65px
		margin-bottom 38px

	&__bg-top
		height 187px
		width 100%
		position absolute
		top 0
		left 0
	&__bg-bottom
		height 170px
		width 100%
		position absolute!important
		bottom 0
		left 0

	.slider 
		margin-top 28px

	.fotorama__shadows--left
	.fotorama__shadows--right
		&:after
		&:before
			top 40px

	.slider-control
		top 57px
		user-select none

.rate
	background rgba(255,255,255,0)
	transition background 0.3s ease-in-out

	&:hover
		padding-left 20px
		padding-right 20px
		/* margin 0 0 0 -20px!important */
		background rgba(255,255,255,1)

		.icon
			transform scale(1.1)


	h1
		font-size 30px
		margin 26px 0 10px
		padding-top 0
	h2
		font-size 18px
		line-height 20px
		font-weight 300
		position relative
		padding-bottom 18px
		margin-bottom 14px

		&:after
			content ""
			display block
			height 1px 
			width 46px
			background $green
			position absolute
			margin-left -23px
			left 50%
			bottom 0
	p 
		font-size 14px
		line-height 20px
		font-weight 400
		margin-bottom 0

		strong.num
			font-weight 800

.rate__icon
	display block
	border-radius 200px
	border 2px solid #777
	margin 0 auto
	position relative
	box-sizing content-box

	.icon
		display block
		position absolute
		top 50%
		left 50%
		transition all 0.3s ease-in-out
		overflow hidden

.grade-1
	.rate__icon
		margin 6px auto
		border 2px solid #000
	h1
		margin-top 32px
.grade-2
	.rate__icon
		margin 3px auto
		border 5px solid $green
	h1
		margin-top 29px
		color $green
.grade-3
	.rate__icon
		border 8px solid $orange
	h1 
		color $orange

.startup 
	.rate
		padding 120px 0 100px
	.rate__icon
		width 180px
		height 180px
		.icon
			margin -40px 0 0 -46px

	.grade-1
		.icon
			sprite($rate__startup-1)
	.grade-2
		.icon
			sprite($rate__startup-2)
	.grade-3
		.icon
			sprite($rate__startup-3)		
.business
	.rate
		padding 100px 0  70px
	.rate__icon
		width 230px
		height 230px
		.icon
			margin -44px 0 0 -68px
	.grade-1
		.icon
			sprite($rate__business-1)
	.grade-2
		.icon
			sprite($rate__business-2)
	.grade-3
		.icon
			sprite($rate__business-3)	
.company
	.rate
		padding  70px 0  45px
	.rate__icon
		width 280px
		height 280px
		.icon
			margin -70px 0 0 -93px

	.grade-1
		.icon
			sprite($rate__company-1)
	.grade-2
		.icon
			sprite($rate__company-2)
	.grade-3
		.icon
			sprite($rate__company-3)

.rate__helper
	padding-top 49px
	height 170px
	margin -20px 0 -40px

	p 
		margin-bottom 0
		color #fff

	.btn
		margin-right 0
		background #333
		color $orange
		
		&:hover
			background $orange
			color #333
		&:active
			background darken($orange, 25%)

/* ______________-FAQ-________________ */

.faq
	padding-top 44px

	.content 
		margin-left 40px
	
	&__item
		margin 0 0 60px
		font-size 13px
		line-height 20px
		text-align left

	&__question
		display block
		font-size 14px
		font-weight 800
		margin-bottom 20px

	&__answer
		color #333
		


hr.divider
	border none
	height 8px
	position relative
	margin-bottom 30px

	&:after
		margin-left -43px
		pseudo__center()
		sprite($divider)

.seo-faq
	.with-icon
		padding-top 30px
		position relative
		
		&:before
			pseudo()
			left 50%
			top -100px
			margin-left -74px
			sprite($seo__faq)
			
.seo-frontpage
	.with-icon
		padding-top 180px
		position relative
		
		&:before
			pseudo()
			left 50%
			top 0px
			margin-left -95px
			sprite($seo__clock)
			
.seo-instruction	
	.with-icon
		padding-top 210px
		position relative
		
		&:before
			pseudo()
			left 50%
			top 0px
			margin-left -55px
			sprite($seo__rocket)

.seo-content
	text-align left
	margin-bottom 30px
	&:first-of-type
		margin-top 60px

.seo-incut
	font-size 24px
	font-weight 100 

.subheader
	font-size 18px
	font-weight 800
	line-height 20px
	margin-bottom 20px 

h1 + .subheader
	margin-top 20px
	margin-bottom 40px

.seo-icon
	margin 45px auto 0
	width 160px
	height 160px
	border-radius 50% 
	border 2px solid $orange
	position relative

	&.partners
		centered_icon($seo__partners)
		
	&.design
		centered_icon($seo__design)
		
	&.money
		centered_icon($seo__money)
	
	&.settings
		centered_icon($seo__settings)
	
	&.goods
		centered_icon($seo__goods)

	&.devices
		centered_icon($seo__devices)
		top 10px
		
		&.checked
			&:before
				pseudo()
				sprite($seo__checked)
				top -10px
				right -30px
			
		&.discount
			&:before
				pseudo()
				sprite($seo__discount)
				top -10px
				right -10px	
				
		&.question
			&:before
				pseudo()
				sprite($seo__question)
				top -10px
				right -10px	
		
	&.seo__1
		&:before
			pseudo()
			sprite($seo__1)
			top -10px
			right -10px	
	&.seo__2
		&:before
			pseudo()
			sprite($seo__2)
			top -10px
			right -10px	
	&.seo__3
		&:before
			pseudo()
			sprite($seo__3)
			top -10px
			right -10px	

.heading_big
	font-size 45px 
	font-weight 100

.with-icon_big 
	font-size: 45px;
	
.with-icon_mod_1 
	margin-bottom 20px

.subheader_mod_1
	margin 20px 0 40px

.rates-img-wrapper
	padding 20px

.request_form
	display none

.seo-incut_mod_1
	margin 40px 0 30px




















