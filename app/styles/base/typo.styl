.btn-circle
	display inline-block
	position relative
	width 37px
	height 37px
	border 2px solid transparent
	border-radius 40px
	opacity 0.8
	cursor pointer
	user-select none

	&:before
		content ''
		display block
		position absolute
		top 50%
		left 50%

	&:hover
		opacity 1
		border-color $red

	&:active
		top 1px
		border-color darken($red, 50%)

	&--big
		width 60px
		height 60px
		
	&--white
		border-color #fff
		&:hover
			border-color #fff
		&:active
			border-color #fff

	&--orange
		border-color $orange
		opacity 1
		&:hover
		&:active
			border-color $orange
			background $orange

	&--black
		border-color #000
		opacity 1
		&:hover
			border-color #333
			background #333
		&:active
			border-color #000
			background #000

	&--drop
		&:before
			margin -8px 0 0 -7px
			sprite($icon__drop)
		&:active
			&:before
				sprite($icon__drop__active)

		&.btn-circle--white
			&:before
				sprite($icon__drop--white)
			&:active
				border-color #808080
				&:before
					sprite($icon__drop--white__active)

		&.btn-circle--orange
			&:before
				sprite($icon__drop--orange)
			&:hover
			&:active
				&:before
					sprite($icon__drop--black)

	&--darr
		&:before
			width 17px
			height 17px
			margin -11px 0 0 -8px
			background transparent
			border-width 0 0 3px 3px
			border-style solid
			transform rotate(-45deg)

		&.btn-circle--white
			&:before
				border-color #fff
			&:hover
				background #fff
				&:before
					border-color $green
			&:active
				background #ccc
				border-color #ccc
				&:before
					border-color $green

		&.btn-circle--black
			&:before
				border-color #000
			&:hover
				background #333
				border-color #333
				&:before
					border-color $orange
			&:active
				background #000
				border-color #000
				&:before
					border-color $orange			
				



ul.checked
	position relative
	text-align left
	max-width 250px

	li 
		position relative
		font-size 18px
		line-height 26px
		margin-bottom 26px

		&:before
			content ''
			display block
			position absolute
			top 0
			left -44px
			sprite($ui-bullet)

.first.column ul.checked
	left 168px
.third.column ul.checked
	left 84px

ul.with-bullets
	margin-bottom 20px
	li
		list-style-type disc
		list-style-position inside


/* Inputs */

.input-holder
	margin 0 auto 20px
	max-width 450px
	label 
		font-size 18px
	.b-small-text
		line-height 20px
		font-size 13px
		color #333

	&--divider
		margin-top 5px

input[type="checkbox"]
input[type="radio"]
	display none

	& + label
		cursor pointer

input[type="checkbox"]
	& + label:before
		content ""
		display inline-block
		vertical-align middle
		height 24px
		width 27px
		margin -4px 4px 0 0
		background-image url('../images/ui/pokupo-ui.png')
		background-repeat no-repeat

input[type="radio"]
	& + label:before
		content ""
		display inline-block
		vertical-align middle
		height 36px
		width 36px
		margin -4px 6px 0 0
		background-image url('../images/ui/pokupo-ui-radio.png')
		background-repeat no-repeat

input[type="checkbox"] 
	& + label:before
		background-position 0 0

	&:hover + label:before
		background-position -27px 0

	&:active + label:before
		background-position -54px 0

	&:checked + label:before
		background-position -81px 0

	&:checked:active + label:before
		background-position -54px 0

input[type="radio"]
	& + label:before
		background-position 0 0

	&:hover + label:before
		background-position -36px 0

	&:active + label:before
		background-position -36px 0

	&:checked + label:before
		background-position -72px 0

	&:checked:active + label:before
		background-position -72px 0

input.inline + label
	margin-right 40px

	&:last-child
		margin-right 0


	
input[type="text"]
input[type="email"]
input[type="tel"]
input[type="password"]
