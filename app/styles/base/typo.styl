a
	color $a__link
	&:focus
	&:hover
		color $a__hover
	&:active
		color $a__active

p
	font-size 13px
	line-height 20px
	margin-bottom 20px

p.before-list
	margin-bottom 0

b 
	font-weight 800

dfn
	font-weight 800
	color $green

.btn
	display inline-block
	margin 28px auto 25px
	padding 8px 24px
	border 3px solid $red
	color $red
	border-radius 40px
	font-size 19px
	font-weight 700
	text-decoration none
	cursor pointer
	// transition background-color, background, border-color 0.1s ease-in-out

	&:hover
		background-color $red
		border-color $red
		color #fff

.btn-register
	border-width 4px
	padding 16px 42px 15px 
	margin-top 25px
	text-transform uppercase
	font-size 20px
	font-weight 400

.btn-submit
	margin 28px auto 25px
	padding 0
	background-color $orange
	border 4px solid $red
	color $red
	border-radius 40px
	width 435px
	height 80px
	line-height: 75px;
	font-size 19px
	text-transform uppercase
	font-weight 600
	letter-spacing 1px
	transition all 0.1s ease-in-out

	&:hover
		background-color $red
		border-color $red
		box-shadow 0 1px 0 0px rgba(154,25,21,0.8)
		color #fff

	&:active
		background-color #760e12
		border-color #760e12
		color #fff
		border-width 0
		padding 5px 4px 4px

	&.disabled
	&:disabled
		cursor default
		background none
		opacity 0.3
		&:hover
			color $red
			box-shadow none
		&:active
			background none
			color $red
			box-shadow none
			border 4px solid $red
			padding-top 0


