p
	font-size 13px
	line-height 20px
	margin-bottom 20px


.inline-input
	width 100%
	height 60px
	padding 14px 18px
	font-size 18px
	line-height 30px
	border none
	outline none
	border 3px solid transparent /* #dbd1ca */
	transition border 0.2s ease-in-out

	&:focus
		border 3px solid #ff5a00
	&.error
		border 3px solid $red
		color $red

.btn
	display inline-block
	margin 28px auto 25px
	padding 8px 24px
	border 3px solid $red
	color $red
	border-radius 40px
	font-size 19px
	font-weight 700
	transition all 0.1s ease-in-out
	text-decoration none

	&:hover
		background-color $red
		border-color $red
		box-shadow 0 1px 0 0px rgba(0,0,0,0.4)
		color #fff

.btn-register
	border-width 4px
	padding 16px 42px 15px 
	margin-top 25px
	text-transform uppercase
	font-size 20px
	font-weight 400

.btn-submit
	margin 28px auto 25px
	padding 0
	background-color $orange
	border 4px solid $red
	color $red
	border-radius 40px
	width 435px
	height 80px
	line-height: 75px;
	font-size 19px
	text-transform uppercase
	font-weight 700
	letter-spacing 1px
	transition all 0.1s ease-in-out

	&:hover
		background-color $red
		border-color $red
		box-shadow 0 1px 0 0px rgba(154,25,21,0.8)
		color #fff

	&:active
		background-color #760e12
		border-color #760e12
		color #fff
		border-width 0
		padding 5px 4px 4px

	&.disabled
	&:disabled
		cursor default
		background none
		opacity 0.3
		&:hover
			color $red
			box-shadow none
		&:active
			background none
			color $red
			box-shadow none
			border 4px solid $red
			padding-top 0


.btn-orange
	border 4px solid #F4A816
	border-radius 40px
	color #f4a816
	font-weight 300
	vertical-align middle
	text-decoration none

	&:hover 
		border-color $orange
		background $orange
		
	&:active
		top 1px
		border-color #cc8600
		background #cc8600

	&:hover 
	&:active
		color #333

ul.checked
	position relative
	text-align left
	max-width 250px

	li 
		position relative
		font-size 18px
		line-height 26px
		margin-bottom 26px

		&:before
			content ''
			display block
			position absolute
			top 0
			left -44px
			sprite($ui-bullet)

.first.column ul.checked
	left 168px
.third.column ul.checked
	left 84px