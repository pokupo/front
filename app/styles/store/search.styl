section.search
	padding 14px 0

.b-search
	position relative
	margin-right 190px
	border-right 280px solid $orange

	&-holder
		float left
		width 100%
		height 52px
		background #fff

	&__button
		position relative
		float right
		margin-right -190px
		right -280px
		width 170px
		height 52px
		border none
		background $green
		color #fff
		text-transform uppercase
		font-size 16px
		line-height 52px

	&__input
		width 100%
		height 52px
		font-size 18px
		line-height 32px
		border none
		padding 5px 20px
		box-sizing border-box!important
		color #333
		
.b-location
	float right
	margin-right -280px
	width 280px
	height 52px
	
	position relative
	background #fff
	border-left 1px solid $grey
	text-align left

	&__current
		position relative
		display block
		width 100%
		height 52px
		padding 0 20px
		z-index 5

		color $a__link
		font-size 13px
		line-height 52px
		font-weight 800
		text-decoration none

	&__catalog
		.menu
			position relative


	.dropdown__content
		padding-top 52px
		z-index 4

