/* Строка поиска */
section.search
	padding 14px 0

.b-search
	position relative
	margin-right 190px
	border-right 273px solid $orange

	&-holder
		float left
		width 100%
		height 52px
		background #fff

	&__button
		position relative
		float right
		margin-right -190px
		padding-right 30px
		right -273px
		width 171px
		height 52px
		border none
		background $green
		color #fff
		text-transform uppercase
		font-size 16px
		line-height 52px
		letter-spacing 1px
		transition background 0.2s ease-in-out

		&:hover
			background darken($green, 25%)
		&:active
			top 1px
			background darken($green, 50%)0

		&:after
			content ''
			position absolute
			top 50%
			margin-top -15px
			right 18px
			sprite($icon__search)

	&__input
		width 100%
		height 52px
		font-size 18px
		line-height 32px
		border none
		padding 5px 18px
		box-sizing border-box!important
		color #333
		
.b-location
	float right
	margin-right -273px
	width 273px
	height 52px
	
	background #fff
	border-left 2px solid $grey
	text-align left
	z-index 9

	&__current
		position relative
		display block
		width 100%
		height 52px
		padding 0 20px
		z-index 5

		color $a__link
		font-size 13px
		line-height 52px
		font-weight 800
		text-decoration none

	&__catalog
		.menu
			position relative
			
	.dropdown__content
		padding-top 52px
		z-index 4

/* Расширенный поиск */
section.advanced-search
	padding 16px 0
	transition all 0.5s ease-in-out

	.advanced-search-trigger
		text-align right
		&__text
			font-size 16px
			color $a__link
			text-decoration none
			border-bottom 1px dotted rgba($a__link, 0.4)
			cursor pointer
			&:hover
				color $a__hover
				border-bottom-color rgba($a__hover, 0.5)
	&.active
		background $grey
		margin-bottom 45px
		padding-bottom 40px


.b-advanced-search
	height 200px

	p
		margin-top 15px
		font-size 30px
		color #999
		line-height 140px
		padding 30px
		border 3px dashed #ccc