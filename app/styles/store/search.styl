section.search
	padding 14px 0

.b-search
	position relative
	margin-right 190px
	border-right 273px solid $orange

	&-holder
		float left
		width 100%
		height 52px
		background #fff

	&__button
		position relative
		float right
		margin-right -190px
		right -273px
		width 171px
		height 52px
		border none
		background $green
		color #fff
		text-transform uppercase
		font-size 16px
		line-height 52px
		transition background 0.2s ease-in-out

		&:hover
			background darken($green, 25%)
		&:active
			top 1px
			background darken($green, 50%)0

	&__input
		width 100%
		height 52px
		font-size 18px
		line-height 32px
		border none
		padding 5px 18px
		box-sizing border-box!important
		color #333
		
.b-location
	float right
	margin-right -273px
	width 273px
	height 52px
	
	background #fff
	border-left 2px solid $grey
	text-align left
	z-index 9

	&__current
		position relative
		display block
		width 100%
		height 52px
		padding 0 20px
		z-index 5

		color $a__link
		font-size 13px
		line-height 52px
		font-weight 800
		text-decoration none

	&__catalog
		.menu
			position relative
			
	.dropdown__content
		padding-top 52px
		z-index 4

