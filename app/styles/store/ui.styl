/* Форматирование цены */
.b-price
	&__number
		font-size 100%
	&__thinsp
		font-size 50%
		line-height 1
	&__rubl
		font-family $rubl
		line-height normal
	&__separator
		margin 0 0.2em 0 0

.b-increment-input
	position relative
	display inline-block
	max-width 190px

	&__uarr
	&__darr
		position absolute
		top 50%
		margin-top -18px
		cursor pointer
		height 36px
		width 36px
		border-radius 36px
		border 2px solid #ccc
		font-weight bold
		font-size 18px
		line-height 34px
		text-align center
		line-height 32px
		user-select none
		background #fff

		&:active
			margin-top -17px

		&.disabled
			cursor default
			opacity 0.2
			pointer-events none


	&__darr
		left 0
		color $red
		&:before
			pseudo__center()
			width 16px
			height 2px
			margin -1px 0 0 -8px
			background $red
		&:hover
			border-color $red
		&:active
			border-color darken($red, 24%)

	&__uarr
		right 0
		color $green
		&:before
		&:after
			pseudo__center()
			background $green
		&:before
			width 16px
			height 2px
			margin -1px 0 0 -8px
		&:after
			width 2px
			height 16px
			margin -8px 0 0 -1px
		&:hover
			border-color $green
		&:active
			border-color darken($green, 24%)


	&__input-wrapper
		display inline-block
		vertical-align middle
		padding 0
		margin 0 46px
		height 52px

	&__input[type="text"]
		vertical-align top
		text-align center
		background $grey
		width 80px // 98px
		height 52px
		padding 0 18px
	










		
