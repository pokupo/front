section.store
	padding 15px 0 20px

.b-sidebar
	position relative
	width 230px
	float left
	text-align left

	.btn
		display none

	.btn-menu
		text-align center
		border 1px solid $orange
		border-radius 0
		height 60px
		width 150px
		color #000
		text-tranform uppercase
		font-size 16px
		line-height 44px
		font-weight bold
		&:hover
			border-width 3px
			line-height 40px
			background #fff

	&__title
		font-size 18px
		font-weight normal
		line-height 24px
		color #000
		margin 0 0 0 2px

	.menu
		position relative

		&__item
			position relative
			
			a
			u
				display block
				width 100%	
				padding 4px 15px 4px 2px
				color $a__link
				font-size 13px
				line-height 22px
				text-decoration none
				background transparent
				transition background 0.1 ease-in-out

				span
					border-bottom 1px solid rgba($a__link, 0.5)

				.num
					vertical-align baseline
					color #999
					font-size 13px
					font-weight normal
					text-align right
					margin-left 5px

				&:hover
					color $orange

			&.current
				& > a
				& > u
					color $orange
					font-weight 800

					span
						border-bottom none

					&:hover
						color $orange
						cursor default

				&.with-submenu > a
				&.with-submenu > u
					span
						border-bottom-color rgba($orange, 0.5)
			&.active
				&.with-submenu 
					&:before
						transform rotate(180deg)

			&.with-submenu
				&:before
					content ''
					position absolute
					display block
					top 12px
					left -20px
					sprite($accordeon__group)
					transition transform 0.2s ease-in-out
				& > a
				& > u
					span
						border-bottom 1px dotted


	.submenu
		display none
		&.active
			display block

		&__item
			a 
				padding-left 15px
				span
					border-bottom-style solid
				&:hover
					color $orange
					span
						border-bottom-color rgba($orange, 0.4)

			&.active > a
				position relative
				color $orange
				font-weight 800
				background $grey
				&:before
				&:after
					content ''
					position absolute
					display block
					width 0
					height 0
					right -30px
					border 30px solid transparent

				&:before
					top -30px
					border-bottom-color #fff
				&:after
					bottom -30px
					border-top-color #fff

				span
					border-bottom none

				&:hover
					cursor default

.store .b-sidebar
	margin-top 56px
	h1
		margin-bottom 15px

.b-catalog
	margin-left 245px
	text-align left

	&__title
		margin-bottom 10px

	&__controls
		height 40px
		padding 0	

		&-item
			height 40px
			font-size 13px
			line-height 40px
			margin-left 20px
			float right

			&:first-child
				margin-left 4px
				float left

	&__items
		padding-top 60px
		font-size 0

	&__item
		display inline-block
		vertical-align top

.b-item
	position relative

	&__picture
		height 228px
		line-height 228px
		background url('../images/catalog/default.png') 50% 50% no-repeat
		vertical-align middle
		text-align center
		

		img 
			display inline-block
			vertical-align middle
			max-width 100%
			max-height 100%

	&__title
		font-size 18px
		line-height 20px
		padding-bottom 12px
		.parameter
			color #666

	&__info
		position relative
		font-size 13px
		line-height 20px
		color #000
		padding 0 0 11px
		margin-bottom 8px

		p 
			margin-bottom 5px

		&:after
			content ''
			display block
			position absolute
			left 50%
			bottom 0
			margin-left -25px
			width 46px
			border-bottom 1px solid $green

	&__price
		color $green
		font-size 30px
		font-weight 800
		margin-top -9px

		&--old
			display inline-block
			position relative
			padding 0 5px
			text-align center
			color #999
			font-size 15px
			font-weight normal

			&:after
				content ''
				display block
				position absolute
				top 50%
				left 0
				width 100%
				border-top 1px solid #999

			& + .b-price
				margin-top -5px

	&__badges
		display none

.b-catalog__items
	&.cards
		.b-item
			width 242px
			text-align center
			&__info
			&__order-button
				display none

			&__popover
				.b-item__info
				.b-item__order-button
					display block
				.b-item__price
					margin-top 0
	&.magazine
		padding-top 86px
		.b-catalog__item
			margin-bottom 70px
		.b-item
			width 100%
			min-width 726px

			&.with_popover
				.b-item__popover
					padding 30px 0
					top -30px

			&__picture
			&__order-button
			.responsive-holder
				position relative
				float left
				margin 0 -100% 0 0

			&__picture
				width 240px
				height 220px
				line-height 220px
				margin -30px -100% -30px 0
				left 0
				background-image none
				
			.responsive-holder
				width 230px
				left 265px
			&__order-button
				left 500px
			&__info:after
				display none
	&.titles
		padding-top 86px

		.b-catalog__item
			margin-bottom 40px
		.b-item
			width 100%
			min-width 726px

			.responsive-holder
				position relative

			&.with_popover
				.b-item__popover
					padding 25px 0
					top -25px

			&__picture
			&__description
			&__price
			&__order-button
				position relative
				float left
				margin 0 -100% 0 0

			&__picture
				width 160px
				height 140px
				line-height 190px
				margin -25px -100% -25px 0
				left 0
				background-image none
				
			&__description
				width 220px
				left 180px
			&__price
				width 120px
				left 370px
			&__order-button
				left 500px
			&__info:after
				display none


/* Карточка при наведении */
.b-item.with_popover 
	transition z-index .1s linear
	z-index 0

	.b-item__popover
		position absolute
		width 100%
		left 0
		top 0
		visibility hidden
	    opacity 0
		transition opacity .1s linear, visibility .1s linear
		z-index 4
	
	&:hover 
		z-index 5

		.b-item__popover
			visibility visible
			opacity 1

/* Форматирование цены */
.b-price
	&__number
		font-size 100%
	&__thinsp
		font-size 50%
		line-height 1
	&__rubl
		font-family 'ALSRubl-Tahoma', Tahoma, sans-serif
		line-height normal
		
/* 4-й вид каталога */
.nosidebar 
	.b-sidebar
		z-index 20
		margin 0 -100% 0 0

		.btn
			display inline-block
			margin 0

		.dropdown__content
			box-sizing content-box
			padding 100px 30px 20px
			margin -12px 0 0 -13px

			li.active > a:after
			li.active > a:before
				display none

	.b-thermometer
		padding-left 165px
		height 60px
		margin-bottom: 6px;

		p
			line-height 60px
			margin 0

	.b-catalog
		margin-left 0

		&__controls
			position relative
			height 80px
			padding 20px 0	
			background $grey

			&:before
			&:after
				content ''
				position absolute
				display block
				width 100%
				top 0
				bottom 0
				background $grey

			&:before
				right 100%
			&:after
				left 100%
				











.inline-sorter 
	display inline-block
	padding 0 30px 0 20px
	margin-left -18px
	min-width 120px
	text-align left
	line-height 16px
	z-index 6

	.menu 
		border-top 1px solid $grey

	.selector__current
		color $a__link
		font-weight 800
		border-bottom 1px dotted rgba($a__link, 0.4)
		&.active
			border-bottom none

	.dropdown__content
		top -8px
		padding-top 30px

.radio-circles
	display inline-block
	vertical-align middle

	.menu
		font-size 0

	.menu__item
		display inline-block
		vertical-align bottom
		width 40px
		height 40px
		margin-left 10px
		
		a 
			display block
			position relative
			width 100%
			height 100%
			text-decoration none
			color #333
			line-height 36px
			text-align center
			border-radius 40px
			border 2px solid $orange
			font-size 18px
			&:after
				content ''
				position absolute
				top -3px
				left -3px
				display block
				width 40px
				height 40px
				border-radius 40px
				background rgba(0,0,0,0)
				transition background 0.1s ease-in-out

			&:hover
				border-width 3px
				line-height 34px
			&:active
				top 1px
				background $orange
				&:after
					background rgba(0,0,0,0.25)

		&:first-child
			margin-left 6px

		&.active 
			a
				background $orange
				&:hover
					cursor default
				&:active
					top 0
					&:after
						display none

		.icon
			position absolute
			top 50%
			left 50%
			margin -8px 0 0 -8px

			&__currency--rub
				margin -7px 0 0 -5px
				sprite($icon__currency--rub)
			&__currency--dol
				margin -8px 0 0 -5px
				sprite($icon__currency--dol)
			&__currency--eur
				margin -7px 0 0 -7px
				sprite($icon__currency--eur)
			&__currency--lcn
				margin -7px 0 0 -7px
				sprite($icon__currency--lcn)
			&__currency--btc
				margin -9px 0 0 -6px
				sprite($icon__currency--btc)
			&__cards
				sprite($icon__cards)
			&__magazine
				sprite($icon__magazine)
			&__titles
				sprite($icon__titles)













